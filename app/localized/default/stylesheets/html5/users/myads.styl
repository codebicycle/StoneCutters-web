#myads {
    position: relative;
}
.users_myads_view {
    .breadcrumb {
        background: $ligthGrey;
        border-bottom: 1px solid #dadada;
        color: $violet;
        display: table;
        font-size: 16px;
        overflow: hidden;
        padding: 7px 10px;
        width: 100%;
    }
    .my-ads {
        .datetime, .title, .price {
            width: 50%;
        }
        &.ready .datetime {
            color: $green;
        }
        &.expired .datetime, &.deleted .datetime {
            color: $black;
        }
        &.rejected .datetime {
            color: $red;
        }
        &.pending .datetime {
            color: $yellow;
        }
        .price {
            color: $grey;
            display: inline-block;
            text-align: left;
        }
        .btnfilter {
            font-size: 14px;
            padding: 7px;
            position: absolute;
            right: 10px;
            width: 15%;
            &.edit {
                top: 25px;
                color: $blue;
            }
            &.more {
                top: 65px;
                color: $darkGrey;
            }
            &.active {
                background-color: #dedede;
            }
        }
    }
    .actions {
        -moz-box-shadow:    0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        -webkit-box-shadow: 0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        box-shadow:         0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        background: #fff;
        border-radius: 3px;
        left: 0;
        margin: 3px 2% 0;
        position: absolute;
        top: 0;
        width: 96%;
        .action {
            background-position: 8px center;
            background-repeat: no-repeat;
            box-sizing: border-box;
            color: $black;
            display: inline-block;
            display: inline-block;
            padding: 5px 5px 5px 40px;
            width: 32%;
            &.view {
                background-image: url(imageUrl/images/html5/myads_view.png);
            }
            &.delete {
                background-image: url(imageUrl/images/html5/myads_delete.png);
            }
            &.help {
                background-image: url(imageUrl/images/html5/myads_help.png);
            }
        }
    }
}
