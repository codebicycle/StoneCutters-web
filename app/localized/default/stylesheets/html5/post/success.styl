section.afterPosting {
	display: block;
	padding: .375rem;
	background: #EBEBEB;
}
section.afterPosting article {
	display: block;
	padding: .8125rem;
	background: #fff;
	-moz-box-shadow: 1px 1px 1px 0 #ccc;
	-webkit-box-shadow: 1px 1px 1px 0 #ccc;
	box-shadow: 1px 1px 1px 0 #ccc;
}
section.afterPosting article.ready {
	margin: 0 0 .375rem 0;
}
section.afterPosting article h1 , section.afterPosting article h2 {
	display: block; 
	font-weight: normal; 
	font-size: 1.375rem;
}
section.afterPosting article h1 {
	color: #494949;
}
section.afterPosting article h2 {
	color: #E2771C;
}
section.afterPosting article p {
	display: block;
	margin: .375rem 0 0 0;
	color: #494949;
	font-size: .8125rem;
}
section.afterPosting article a {
	display: block;
}
section.afterPosting article p a {
	display: inline-block;
	color: #2489CE;
}
section.afterPosting article a.posting {
	padding: .375rem 0; 
	margin: .375rem 0;
	background: #E2771C;
	color: #fff!important;
	text-align: center;
	font-size: 1.188rem;
}
section.afterPosting article a.posting:hover {
	color: #fff;
	text-decoration: none;
}
section.afterPosting article a.home {
	margin: 1.5em 0 1em;
	color: #474747!important;
	text-align: center;
	font-size: .8125rem;
}