@import '../helpers/variables.styl'
@import '../helpers/mixins.styl'

.header-view {
	height: 60px;
	margin: 0 0 20px 0;
	position: relative;
	box();
	clear-fix();

	.brand {
		left: 30px;
		margin: 0;
		position: absolute;
		top: -9px;

		img {
			display: block;
		}
	}

	.posting {
		background: $orange;
		color: #fff;
		float: right;
		font-size: 1.53em;
		font-weight: bold;
		padding: 10px;
		text-align: center;
	}
}

.search-box {
	float: left;
	margin: 0 0 0 132px;

	fieldset {
		clear-fix();
		border: none;
		line-height: 60px;
		margin: 0;
		padding: 0;
	}
	.cta,
	.text-field {
		display: inline-block;
		vertical-align: middle;
	}
	.cta {
		background: $green;
		border: none;
		border-radius(0 3px 3px 0);
		color: #fff;
		font-size: 1.53em;
		height: 34px;
		line-height: 34px;
		width: 40px;
	}
	.text-field {
		border-color: $green;
		border-radius(3px 0 0 3px);
	}
}