.modal-hide {
	display: none;
}

#modal-overlay {
	background-color: #000;
	height:100%;
	left: 0;
	opacity: .5;
	position: absolute;
	overflow: hidden;
	top: 0;
	width: 100%;
	z-index: 999;
}

.modal {
	h3, h4 {
		margin: 0;
	}

	box($white, #ddd , 3px, 0px);
	left: 50%;
	margin: 0 0 0 -369px;
	position: fixed;
	width: 720px;
	z-index: 1000;
}

.modal-header {
	background-color: #eee;
	position: relative;
	padding: 15px 20px;
	border-bottom: 1px solid #ddd;

	h3 {
		font-size: 1.923rem;
	}
}

.modal-close {
	background: #999 url(imageUrl/images/desktop/close-icon.png) 50% 50% no-repeat;
	border: 1px solid #c8c8c8;
	display: block;
	height: 20px;
	position: absolute;
	right: 9px;
	top: 9px;
	width: 20px;
	text-indent: -9999rem;

	&:hover {
		background-color: #000;
	}
}

.modal-content {
	padding: 15px 20px;
	background: $white;

	> a {
		font-size: 1.077rem;
		font-weight: bold;
		margin-bottom: 14px;

		&:hover {
			text-decoration: none;
		}
	}

	 
	h4 {
		margin: 0 0 15px 0;
		padding-bottom: 15px;
		font-weight: bold;
		border-bottom: 1px solid #ddd;
	}

	.column {
		float: left;
		width: 48%;
	}

	.column-right {
		float: right;
	}

}

.modal-cities {
	ul-reset();
	font-weight: bold;

	li {
		padding-bottom: 6px;
	}
}

.container-columns {
	clear-fix();
}