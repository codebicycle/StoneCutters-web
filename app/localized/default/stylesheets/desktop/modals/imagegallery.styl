#image-gallery-modal {
    background: rgba(0,0,0,0.8);
    .modal-container, .modal-header, .modal-content {
        background: $black;
        border: none;
    }
    .modal-container {
        border-radius: 0;
        height: 90%;
        width: 980px;
    }
    .modal-header {
        height: 40px;
    }
    .modal-content {
        padding: 0;
    }
    .icon-close {
        btn-close(rgba(255, 255, 255, .4), rgba(255, 255, 255, 1));
        z-index: 3;
        font-size: remify(20px);
    }
    .arrow-prev, .arrow-next {
        color: rgba(255, 255, 255, .4);
        cursor: pointer;
        font-size: 32px;
        height: 100%;
        position: absolute;
        text-shadow: 0px 0px 4px rgba(0, 0, 0, 1);
        top: 50%;
        transform (translateY(-50%));
        width: 50%;
        z-index: 1;

        &::before {
            padding-right: 5px;
            position: relative;
            top: 48%;
        }
        &:hover {
            color: rgba(255, 255, 255, 1);
        }
    }
    .arrow-prev {
        left: 0;
    }
    .arrow-next {
        right: 0;
        text-align: right;
    }
    .modal-image-viewer {
        margin: 0;

        img {
            bottom: 0;
            left: 0;
            margin: auto;
            max-height: 100%;
            max-width: 100%;
            position: absolute;
            right: 0;
            top: 0;
        }
    }
    .modal-footer {
        background: rgba(0, 0, 0, .5);
        bottom: 0;
        left: 0;
        position: absolute;
        width: 100%;

        .item-title {
            color: $white;
            display: block;
            font-size: $s;
            padding: 10px 0;
            text-align: center;
        }
        .thumbnail-wrapper {
            display: block;
            text-align: center;

            .thumbnail {
                border: 3px transparent solid;
                cursor: pointer;
                display: inline-block;
                height: 39px;
                margin: 0;
                position: relative;
                width: 39px;
                z-index: 2;

                &:hover, &.active {
                    border: 3px $blue solid;
                }

                img {
                    bottom: 0;
                    left: 0;
                    margin: auto;
                    max-height: 100%;
                    max-width: 100%;
                    position: absolute;
                    right: 0;
                    top: 0;
                }
            }
        }
    }

}
