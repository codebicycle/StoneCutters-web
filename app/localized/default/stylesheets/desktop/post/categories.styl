.posting-categories-view {
	clear-fix()
	.posting-label {
		font-weight: normal;
		margin: 0;
	}

	.message {
		clear: both;
		margin-top: 0;
		padding: 5px 0 0 182px;
	}
}

.posting-categories-list {
	background: $greyBoxBg;
	border-radius();
	float: left;
	height: 100%
	position: relative;
	ul-reset();

	a {
		display: block;
		padding: 6px 15px 6px 35px;
		transition: background-color 0.5s, color 0.5s;
		white-space: nowrap;
		line-height: 1.4;

		&:focus {
			background-color: $lightBlueHover;
		}
		&:hover, &.active, &.select {
			color: $white;
			text-decoration: none;

			&::before {
				color: $white;
			}
		}
		&:hover {
			background-color: $blue;
		}
		&.select, &.active {
			background-color: $green;
			box-shadow: 0 0 3px 0 $greyBorders;
		}
		&.select {
			&.subcategory::before {
				right: 8px;
				font-size: $m;
			}
		}
	}

	.child-categories-list {
		background: $white;
		border-left: 3px solid $green;
		bottom: 0;
		left: 100%;
		overflow-y: auto;
		position: absolute;
		top: 0;
		transition: background-color 0.5s;
		ul-reset();
		z-index: 9999;
		
		a {
			padding-left: 15px;
			padding-right: 45px;
		}
	}

	.icons::before {
		position:absolute;
		font-size: $l;
		margin-left: $l*-1.3;
	}
}
