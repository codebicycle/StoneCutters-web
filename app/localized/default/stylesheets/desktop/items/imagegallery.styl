#image-gallery {
    clear-fix();
    margin-top: 10px;

    .image-viewer {
        border: 1px solid $greyBorders;
        float: left;
        height: 400px;
        margin: 0;
        width: 538px;
        position: relative;

        .big-size {
            bottom: 0;
            cursor: pointer;
            left: 0;
            max-height: 100%;
            max-width: 100%;
            position: absolute;
            right: 0;
            top: 0;
        }
    }

    .image-navigator {
       float: right;
       height: 402px;
       width: 60px;

        a {
            display: block;
            margin-top: 10px;
            &:first-child {
                margin-top: 0;
            }
        }

        figure {
            margin: 0;
        }

        .icon-navarrowdown,
        .icon-navarrowup {
            border: 1px solid $greyBorders;
            color: $greyStrong;
            text-align: center;
        }
            
        .thumbnail {
            border: 1px solid $greyBorders;
            height: 58px;
            line-height: 58px;
            width: 58px;
        }
    }

    .item-image {
        display: block;
    }
}