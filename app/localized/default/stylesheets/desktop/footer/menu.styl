.slide-container {
    position: relative;

    .footer-slide {
        bottom: 0;
        box($white, $greyBorders $greyBorders $greyStrong, 3px 3px 0 0, 0, solid, 1px 1px 4px);
        left: 0;
        position: absolute;
        right: 0;
        z-index: 99;

        .icon-close::before {
            background-color: $greyStrong;
            border-radius: 3px;
            color: #eee;
            font-size: 0.714286rem;
            padding: 4px;
            position: absolute;
            right: 10px;
            top: 10px;
        }

        .title-bar {
            border-bottom: 1px solid $greyBorders;
            padding: 10px 40px 10px 20px;

            h3 {
                font-size: $l;
                font-weight: bold;
                margin: 0;
                padding: 0;
            }
        }
    }
    .help-slide {
        li {
            display: inline-block;
            padding-right: 20px;
        }
    }
    .popular-slide {
        clear-fix();
        .popular-column {
            float: left;
            width: 448px;
            ul {
                float: left;
            }
        }
        .popular-cities {
            float: right;
        }
    }

    .around-slide {
        clear-fix();
        ul {
            float: left;
            width: 116px;
            a {
                font-size: $xs;
            }
        }
    }
}

.footer-categorytree-view {
    clear-fix();
    box-shadow: 0 0 4px 0 rgba(0, 0, 0, .3);

    ul {
        ul-reset();
    }

    .category-list {
        box-sizing: border-box;
        float: left;
        padding: 20px 10px;
        width: 25%;

        &:last-child {
            padding-right: 20px;
        }

        a {
            font-size: $xs;
            line-height: 1;
        }

        li {
            padding-bottom: 4px;
        }

        .category {
            padding-bottom: 20px;

            > a {
                font-weight: bold;
                font-size: $m;
            }

            &:last-child {
                padding-bottom: 0;
            }
        }
    }

    .category-list-first {
         padding-left: 20px;
    }

    .category-link {
        color: $black;
        display: inline-block;
        font-size: $m;
        padding-bottom: 10px;
    }
}
