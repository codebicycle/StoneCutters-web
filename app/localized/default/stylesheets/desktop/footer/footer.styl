footer {
    margin-top: 30px;
    padding-bottom: 40px;

    .select {
        box($white, $greyBorders, 5px, 0);
        ul-reset();
        margin-bottom: 10px;
        float: left;

        li {
            border-right: 1px solid $greyBorders;
            padding-right: 6px;
            float: left;

            &:last-child {
               border-right: none;
            }

            &::after {
                transform(rotate(-90deg));
            }

            a {
                color: #666;
                height: 32px;
                line-height: 32px;
                padding-left: 10px;

                &:hover {
                    text-decoration: none;
                }
            }

            span {
                color: #666;
                display: inline-block;
                font-size: $s;
                margin-left: 20px;
            }

            .icon-sketchyarrowleft:before,
            .icon-sketchyarrowright:before {
                transform(rotate(90deg));
            }
        }
    }

    .container{
        border-top: 1px solid #ddd;

        p {
            color: #999;
            display: block;
            float: left;
            font-size: $xs;
            margin: 0;
            padding-top: 10px;
        }

        .social {
            ul-reset();
            clear-fix();

            li {
                float: right;
                padding-top: 2px;
            }

            a {
                color: #999;
                font-size: 2.154rem;

                &:hover {
                    color: #333;
                }
            }
        }
    }

    .footer-options {
        clear-fix();
    }
}
