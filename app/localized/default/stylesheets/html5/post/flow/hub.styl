				-webkit-animation: spinLoader 1s ease-in-out infinite;

			}*/
				
			&.pending {

				&:after {

					content: 'Cargando imagenes';
					position: absolute;
					top: 0;
					right: 0;
					bottom: 0;
					left: 0;
					background-color: rgba(255, 255, 255, .75);

				}

			}

		}

		p {

			position: relative;
			overflow: hidden;
			padding: 0 1em;
			background-color: #5c2a81;
			color: #FFF;
			height: 1.5em;
			line-height: 1.5em;
			text-align: center;

			small {

				display: block;
				overflow: hidden;
				font-size: .75em;
				text-overflow: ellipsis;
				white-space: nowrap;

			}

		}

	}

	li {
		position: relative;
		overflow: hidden;
		padding: 1rem;
		cursor: pointer;

		&:not(:first-child) {

			border-top: solid thin #CCC;

		}

		&:before {
			width: 1.6rem;
			height: 1.6rem;
			display: block;
			position: absolute;
			top: 1.5rem;
		    right: 1rem;
			background-color: #555;
		    border-radius: 100%;
		    color: #fff;
		    content: counter(index, decimal);
		    counter-increment: index;
		    font-size: 1rem;
		    line-height: 1.6rem;
		    text-align: center;
		}

		h3 {
			position: relative;
			padding: 0;
			z-index: 1;
			overflow: hidden;
			font-weight: normal;
			font-size: 1em;
			line-height: 3em;
			color: #333;
			white-space: nowrap;
			text-overflow: ellipsis;
		}

		.stepSummary {

			display: none;
			margin: -.5em 0;

			div {

				font-size: .8em;
				padding: .125em 0;

			}

			small {

				display: block;
				overflow: hidden;
				font-size: .66em;
				text-transform: uppercase;
				color: #999;
				white-space: nowrap;
				text-overflow: ellipsis;

			}

			span {

				display: block;
				overflow: hidden;
				color: #333;
				white-space: nowrap;
				text-overflow: ellipsis;

				&.error {

					color: #C00;

					&:before {

						content: '\2717\00a0';

					}

				}

				&.success {

					&:before {

						content: '\2713\00a0';
						color: #A3B606;

					}

				}

			}

		}

		&.error {

			background-color: #FEE;

			&:before {

				background-color: #d38811;
    			content: "!";

			}

			h3 {

				display: none;

			}

			.stepSummary {

				display: block;

			}

		}

		&.success {

			&:before {

				background: #a7b52c;

			}

			h3 {

				display: none;

			}

			.stepSummary {

				display: block;

			}

		}

	}

	footer {

		padding: 1rem;
		background-color: #F60;
		color: #FFF;
		text-transform: uppercase;
		text-align: center;

	}

}
