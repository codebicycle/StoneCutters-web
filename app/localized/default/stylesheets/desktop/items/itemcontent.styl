#item-content {
    box($white, $greyBorders , 3px, 0);
    margin-bottom: 20px;
    position: relative;

    &:after {
        top: 265px;
    }
    &:before {
        top: 266px;
    }
    > div {
        &:first-child {
            padding: 0 20px;
        }
        .featuredad {
            position: relative;
            height: 20px;
            margin: 20px 0;
            .icon-star-circle {
                color: $featureStarBg;
                font-size: 26px;
                position: absolute;
                z-index: 10;
                top: -7px;
                left: 0;
                &:before {
                    border:2px solid $white;
                    border-radius(50%);
                    background: $white;
                }
            }

            em {
                ribbon($green, $white);
                top: 0;
                left: 24px;
                padding-left: 22px;
                position: absolute;
            }
        }
        .item-title {
            font-size: $xl;
            padding-right: 40px;
            margin: 20px 0;
        }
    }
}
