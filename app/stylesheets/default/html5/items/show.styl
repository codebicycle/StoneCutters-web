section.actions{width: 100%; margin: 0!important; position: fixed; left: 0; bottom: 0; background: #fff; z-index: 10; background: #fff;}
section.actions .background{width: 5%; height: 100%; position: absolute; top: 0; right: 0; background: #FF7700; z-index: 1;}
section.actions > span{width: 100%; height: 1.3em; display: block; position: absolute; top: -1.3em; padding: 0 0 0 .5em; background: #333; color: #fff; opacity: .85;  z-index: 10;}
section.actions > span a[href^=tel] {color: #fff;}
section.actions > div.action{position: relative; width: 33%!important; float: left; margin-right: .5%; cursor: pointer; z-index: 10;}
section.actions > div.action.fullWidth{width: 100%!important;}
section.actions > div.action.email{margin: 0;}
section.actions > div.action:before{content: ""; display: block; padding-top: 50%!important;}
section.actions > div.action.fullWidth:before{padding-top: 16%!important;}
section.actions > div.action > div, section.actions > div.action > a{position: absolute; top: 0; left: 0; bottom: 0; right: 0; background-repeat: no-repeat; background-position: center 20%; background-color: #FF7700; background-size: 32%;}
section.actions > div.action.fullWidth > div{background-size: 10%;}
section.actions > div.action.call > a{background-image: url('/images/html5/phone.png');}
section.actions > div.action.sms > a{background-image: url('/images/html5/sms.png');}
section.actions > div.action.email > div{background-image: url('/images/html5/email.png');}
section.actions > div.action > div span, section.actions > div.action > a span{width: 100%; position: absolute; left: 0; bottom: .1em; text-align: center; color: #fff; font-size: .8em;}

@media screen and (orientation:landscape) {
    section.actions > div.action:before{padding-top: 28%!important;}
    section.actions > div.action > div, section.actions > div.action > a{background-size: 15%;}
}