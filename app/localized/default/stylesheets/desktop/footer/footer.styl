#footer {
	> ul, > p {
		font-size: .875rem;
		line-height: 2rem;
		color: #AAA;
	}
	> ul {
		li {
			display: inline;
			&:not(:first-child):before {
				content: '\2022\a0';
			}
			a {
				color: inherit;
				&:hover {
					color: #369;
					text-decoration: underline;
				}
			}
		}
	}
	> p {
		border-top: solid thin #EEE;
	}

	> section {
		padding: 1rem;
		border: solid thin #EEE;

		> header {

			position: relative;

			> h4 {



			}

			> a {

				

			}

		}

	}

}
