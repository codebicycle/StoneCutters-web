.listing-tabs {
    border-bottom: 1px solid $greyBorders;
    display: block;
    font-size: $s;
    height: 34px;
    margin: 0;

    .tabs {
        float: left;
        ul-reset();

        li {
            display: inline-block;
            margin-right: 5px;
            a {
                height: 33px;
                display: block;
                float: left;
                background: $greyBoxBg;
                border-styles($greyBorders, 3px 3px 0 0, solid solid none, 1px 1px 0);
                color: $greyStrong;
                display: block;
                float: left;
                height: 33px;
                line-height: 2.3;
                padding: 0 10px;

                &.active {
                    height: 34px;
                    margin-bottom: -1px;
                    background: $greyPageBg;
                    color: #000;
                    height: 34px;
                    margin-bottom: -1px;
                }
                &:before {
                    display: inline-block;
                    font-size: 24px;
                    height: 27px;
                }
            }
        }
    }
}
