.post_flow_optionals_view {

	.summary {

		padding: .5em 1em;
		background-color: #ebebeb;

		div {

			overflow: hidden;
			padding: .5em 0;

			&:not(:first-child) {

				border-top: solid thin #BBB;

			}

			&.changeSubcategory {

				/* Disabled until we improve navigation handling */
				display: none;

			}

			small {

				color: #929292;
			    display: block;
			    font-size: 0.66em;
			    overflow: hidden;
			    text-overflow: ellipsis;
			    white-space: nowrap;

			}

			span {

				float: right;
				color: #333;
				display: inline-block;
				width: 75%;

			    span {

					display: ineline;
					color: #09F;
					font-size: 1rem;

			    }

			}

		}

		.change {
			width: 25%;
			float: left;
			text-align: left;
			text-transform: capitalize;
			color: #0076be;
		}

	}

}