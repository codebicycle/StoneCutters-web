@import 'font/font.css'

* {
    margin: 0;
    padding: 0;
}
body {
    font-family: Helvetica,Arial,sans-serif;
}
a {
    text-decoration: none;
    outline: none;
}
ul, li {
    list-style: none;
}

#wrapper {
	width: 61.25rem;
	margin: .625rem auto;
    text-align: left;
}
.btn {
	display: inline-block;
	cursor: pointer;
	background-image: -moz-linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0));
	background-image: -o-linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0)); 
	background-image: -webkit-linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0)); 
	background-image: linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0));
	box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
	border-radius: 3px;
	border: 1px solid rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
	text-align: center;
}
.btn.orange {
	background-color: #f70;
}

.fullCont {
	width: 100%;
	border: 1px solid #ccc;
    border-radius: 3px;
    margin: 20px 0 0;
    overflow: hidden;
}