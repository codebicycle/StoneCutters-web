section#login {
	margin: 0 0 2.5rem 0;
	
	h1 {
		margin: 1.875rem 0 1.25rem;
		padding: 0.625rem 0 0.125rem;
		text-align: center;
		font-size: 2.125rem;
	}
	a {
		color: #38b;
	}
	.field {
		width: 22.81rem;
		margin: 0 auto;

		&.center {
			text-align: center;
		}

		label {
			width: 100%;
			display: inline-block;
			margin: 0 0 .25rem 0;
		    font-size: 1.125rem;

		    a {
		    	float: right;
		    }
		}
		input[type="text"], input[type="password"]  {
			width: 100%;
			margin-bottom: 1rem;
			padding: 1rem;
		    position: relative;
			border: 1px solid #aaa;

			&.mail {
				width: 15.94rem;
				height: 2rem;
			    padding: 3px 5px;
				margin: 0 0 .625rem .5rem;
				border: 1px solid #cccccc;
			    border-radius: 3px;
			    font-size: .8125rem;
			}
		}
		.btn {
			width: 100%;
			padding: 1rem 0;
			margin: 1rem 0;
			color: #fff;
			font-size: 1.563rem;
			border: none;
		}
		a.register {
			width: 100%;
			display: inline-block;
			padding: 1rem 0;
			border-top: 1px solid #aaa;
			text-align: center;
		}
		a.fbBtn {
			margin: 3rem 0;
		    padding: .4375rem .9375rem;
			display: inline-block;
		    border: 1px solid #375b95;
		    border-radius: 5px;
		    box-shadow: 1px 1px 1px #7f7f7f;
		    background: linear-gradient(#6d82ad, #425c97) repeat scroll 0 0 rgba(0, 0, 0, 0);
		    font-family: Arial,Helvetica,sans-serif;
		    font-size: .875rem;	

		    span {
		    	padding: 8px 10px 8px 25px;
		    	background: url(imageUrl/images/desktop/fbBtn.png) no-repeat left;
			    color: #ffffff;
			    text-shadow: 1px 1px 1px #3a538c;
		    }	    
		}
		h3 {
			margin-bottom: 1.25rem;
    		padding-bottom: .3125rem;
			border-bottom: 1px solid #cccccc;
    		font-size: .875rem;
		}
		p {
			margin-bottom: .625rem;
			font-size: .75rem;
    	}
    	strong {
    		float: left;
    		font-size: .75rem;
    	}
	}
}