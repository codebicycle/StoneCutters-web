.post_flow_hub_view {

	counter-reset: index;

	header {

		div {

			position: relative;
			padding-top: 66.6666%;
			background: #DDD url(imageUrl/images/html5/cameraBig.png) no-repeat center center;
			background-size: 45% auto;

			span {

				position: absolute;
				display: block;
				width: 100%;
				margin-top: -24%;
				font-size: 5vw;
				color: #A3B606;
				text-align: center;

			}

			&.fill {

				background-size: cover;

				span {

					display: none;

				}

			}

			/*&:after {

				content: '';
				position: absolute;
				top: 0;
				left: 0;
				width: 46vw;
				height: 46vw;
				margin: -23vw 0 0 -23vw;
				box-sizing: border-box;
