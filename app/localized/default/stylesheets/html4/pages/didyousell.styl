.pages_didyousell_view::after {
    clear: both;
    content: " ";
    display: block;
}

.notification-message::after {
    clear: both;
    content: " ";
    display: block;
}

.notification-message {
    background-color: #eeffcc;
    border-radius: 3px;
    border: 1px solid #ccdd77;
    margin: 20px;
    min-height: 50px;
    padding: 10px;
    position: relative;
    text-align: center;
   
    h4 {
        color: #2d2d2d;
        font-size: 20px;
        line-height: 1.4;
        margin: 0;
    }
    p {
        color: #2d2d2d;
        font-size: 14px;
        line-height: 1.4;
        margin: 0;
    }
    
}
.notification-keep-posting {
    border-radius: 3px;
    border: 1px solid #ccc;
    margin: 20px;
    padding: 10px;
    position: relative;
    text-align: center;

    h3 {
        color: #4a307c;
        font-size: 18px;
    }
    img {
        padding: 10px 20px;
        width: 80%;
    }

    p {
        color: #2d2d2d;
        font-size: 16px;
    }
    .btnPost {
        margin-bottom: 10px;
    }
}
.didYouSellNo::after {
    clear: both;
    content: " ";
    display: block;
}

.didYouSellNo {
    border: 1px solid #ccc;
    margin: 20px 10px;
    overflow: hidden;
    padding: 10px 0;
    text-align: center;

    h2 {
        color: #2d2d2d;
        font-size: 20px;
        margin: 0 0 5px 0;
        padding: 0 10px;
        text-align: center;
    }

    p {
        color: #2d2d2d;
        float: left;
        font-size: 16px;
        margin-bottom: 25px;
        padding: 10px;
        text-align: center;
    }
    .didYouSellOptions {
        margin: auto;

        p {
            margin-bottom: 10px;
        }

    }
    .didYouSellOpt {
        border-top: 1px solid #cccccc;
        display: inline-block;
        float: left;
        height: 115px;
        padding: 10px 10px 15px 10px;
        width: 97%;

        img {
            float:left;
        }

        h3 {
            color: #2d2d2d;
            font-size: 16px;
            font-weight: bold;
            text-align: left;
            margin-bottom: 5px;
        }
        p {
            color: #2d2d2d;
            font-size: 12px;
            text-align: left;
        }
        div {
            float: left;
            padding-left: 15px;
            width: 80%;
        }
        .btns {
            border: 1px solid #cccccc;
            color: #dd8931;
            font-size: 14px;
            font-weight: bold;
            float: left;
        }
    }
}
