	    }

	    .slideBtn {
	    	width: 32px;
	    	height: 32px;
	    	position: relative;
	    	top: 50px;
	    	float: left;
	    	display: block;
	    	background: none repeat scroll 0 0 #fff;
		    border-radius: 50%;
		    color: #333;
		    line-height: 1;
		    cursor: pointer;
	    }
