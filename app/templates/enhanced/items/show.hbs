{{#with item}}
	
<section id="itemPage">
	{{#if images}}
		{{#ifC images.length '==' 1}}
			<div class="onePicture">
				<div class="slide">
		          <div style="background-image: url('{{images.0.url}}');"></div>
		        </div>
			</div>
		{{else}}
		<div class="swiper-containerItem">
			<div class="swiper-wrapper">
				{{#each images}}
				  <div class="swiper-slide"> 
						<div class="slide">
				          <div style="background-image: url('{{url}}');"></div>
				        </div>
					</div>
				{{/each}}
			</div>
			<div class="slidePagination"></div>
		</div>
		{{/ifC}}
	{{else}}
		<div class="noPicture">
			<span></span>
			<p>No hay fotitos!!</p>
			<div class="clear"></div>
		</div>
	{{/if}}
	<span>{{location.cityName}}</span>
	<h1>{{price.displayPrice}}</h1>
	<p class="desc">{{{description}}}</p>
	
	<ul id="optionals">
		{{#each optionals}}
		<li>{{label}}: <strong>{{value}}</strong></li>
		{{/each}}
	</ul>
	{{#if coordinates }}
		<img style="width:100%" src="http://maps.googleapis.com/maps/api/staticmap?center={{coordinates.latitude}},{{coordinates.longitude}} ?>&zoom=14&size=320x100&markers={{coordinates.latitude}},{{coordinates.longitude}}&sensor=false">
	{{/if}}


	<div class="clear"></div>
</section>

<section id="actions">
	<div class="background"></div>
	<span>
		{{#if user.username}}
			{{#if phone}}
				{{user.username}} : {{phone}}
			{{else}}
				{{user.username}}
			{{/if}}
		{{else}}
			{{#if phone}}
				{{phone}}
			{{/if}}
		{{/if}}
	</span>
	{{#if phone}}
		<div class="action call trackMe" data-tracking="itemPage-clickCall">
			<a href="tel:{{phone}}" >
				<span>Call</span>
			</a>
		</div>
		<div class="action sms trackMe" data-tracking="itemPage-clickSms">
			<a href="sms:{{phone}}" >
				<span>SMS</span>
			</a>
		</div>
	{{/if}}
	<div class="action email {{#unless phone}}fullWidth{{/unless}} trackMe" data-tracking="itemPage-clickEmail">
		<div>
			<span>EMAIL</span>
		</div>
	</div>
	<div class="clear"></div>
</section>


	<!--a href="/items?categoryId={{category.id}}&location={{../location}}&relatedAds={{id}}">Related Ads</a-->
{{/with}}
