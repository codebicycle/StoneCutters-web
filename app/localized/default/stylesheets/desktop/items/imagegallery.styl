#image-galery {
    clear-fix();

    .image-viewer {
        box(#f2f2f2, grey(20%) , 0, 0);
        float: left;
        width: 538px;
    }

    .image-navigator {
        float: right;
        height: 400px;
        width: 60px;

        a {
            display: block;
            margin-top: 10px;
            &:first-child {
                margin-top: 0;
            }
        }

    }

    .img-navigator {
       float: right;

        .icon-navarrowdown,
        .icon-navarrowup {
            border: 1px solid $greyBorders;
            color: $greyStrong;
            text-align: center;
        }
            
        .thumbnail {
            border: 1px solid $greyBorders;
            height: 58px;
            line-height: 58px;
            text-align: center;
        }
    }

    .item-image {
        display: block;
        height: auto;
        width: 100%;
    }
}