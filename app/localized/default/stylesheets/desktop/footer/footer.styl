.footer-view {
    margin-top: 30px;
    padding-bottom: 40px;

    .container {
        border-top: 1px solid $greyBorders;
        clear-fix();
        padding: 10px 0 0 0;

        .text {
            color: $greyStrong;
            float: left;
            font-size: $xs;
            margin: 0;
            padding-left: 10px;
        }
    }

    .social {
        clear-fix();
        float: right;
        ul-reset();

        li {
            display: inline-block;
            margin: 0 0 0 5px;

            .icons {
                background: $greyStrong;
                circle(25px);
                color: $greyPageBg;
                display: inline-block;
                font-size: remify(13px);
                line-height: 24px;
                text-align: center;
                vertical-align: middle;

                &:hover {
                    background: $black;
                }
            }
        }
    }

    .footer-options {
        clear-fix();
    }

    .select {
        ul-reset();
        float: left;

        li {
            border-right: 1px solid $greyBorders;
            display: inline-block;
            padding-right: 5px;

            &:last-child {
               border-right: none;
            }

            a {
                color: $black;
                display: block;
                line-height: 32px;
                padding: 0 10px;

                &:hover, &:hover .icons::before {
                    text-decoration: none;
                    color: $black;
                }
            }

            .icons::before {
                color: $greyStrong;
                display: inline-block;
                font-size: remify(8px);
                margin-left: 10px;
            }

            .icon-arrow::before {
                transform(rotate(-90deg));
            }

            &.active {
                background: $greyStrong;
                a, .icons::before, a:hover .icons::before {
                    color: $white;
                }
                .icon-arrow::before {
                    transform(rotate(90deg));
                }
            }
        }
    }

    .appStores {
        float: right;
        margin-top: -7px;
    }
}
