.image-gallery {
    clear-fix();
    overflow: hidden; /* remove this after JS implementation */

    .image-wrapper {
        border: 1px solid $greyBorders;
        position: relative;
        
        .item-image {
            bottom: 0;
            cursor: pointer;
            left: 0;
            margin: auto;
            max-height: 100%;
            max-width: 100%;
            position: absolute;
            right: 0;
            top: 0;
        }
    }

    .image-viewer {
        background: $greyPageBg;
        float: left;
        height: 400px;
        margin: 0;
        width: 538px;
    }

    .image-navigator {
       float: right;
       height: 402px;
       width: 60px;

        figure {
            margin: 0 0 10px;
        }

        .icon-navarrowdown,
        .icon-navarrowup {
            border: 1px solid $greyBorders;
            color: $greyStrong;
            display: block;
            text-align: center;
        }

        .icon-navarrowup + figure {
            margin: 10px 0;
        }
        
        .image-wrapper {
            display: block;
            height: 60px;
        }
    }
}