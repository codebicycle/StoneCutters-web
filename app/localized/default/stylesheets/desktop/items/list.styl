@import '../helpers/variables.styl';
@import '../helpers/mixins.styl';

#listing-filters {
    width: 238px;
    float: left;
    margin-right: 20px; 
    box(#eee, #ddd, 3px, 0);
    > span {
        display: block;
        margin: 0;
        padding: 10px;
        font-weight: bold;
        font-size: 1.077rem;
    }
    span.title {
        border-bottom: 1px solid #ddd;
        color: #000;
    }
    a {
        display: block;
        padding: 10px;
        &:before {
            font-size: 1.4rem;
        }
    }
}
#listing-items{
    width: 720px;
    float: left;
    background: #aaa;
}