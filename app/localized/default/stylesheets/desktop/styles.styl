@import 'helpers/normalize.css';
a {
	color: $blue;
	outline: none;
	text-decoration: none;

	&:hover {
		color: #369;
		text-decoration: underline;
	}
}

body {
	background: $greyPageBg;
	font-family: arial, helvetica, sans-serif;
}

html {
	font-size: $baseFont;
}

input::-webkit-input-placeholder {
   color: $greyStrong;
}

input::-moz-placeholder {
   color: $greyStrong;
}

input:-ms-input-placeholder {
   color: $greyStrong;
}

main {
    clear-fix();
}

#progressBar {
    background: $orange;
    border-radius: 10%;
    height: 2px;
    left: 0;
    position: fixed;
    top: 0;
    transition(width 500ms ease-out,opacity 400ms linear);
    width: 0%;
    z-index: 999999;
}

.env-label {
	background: $orange;
	color: $white;
	font-size: $xs;
	left: 0;
	padding: 5px 10px;
	position: fixed;
	text-align: center;
	top: 0;
	z-index: 99999;
}

.hide {
    display: none;
}

.noscroll{
    overflow: hidden;
}

.posting {
	border-radius();
	action-button($orange, #fff, 3px, 15px 30px);
	font-size: $l;
	font-weight: bold;
	line-height: 1;
}

.search-form {
	fieldset {
		border: none;
		margin: 0;
		padding: 0;
	}
	.button,
	.text-field {
		display: inline-block;
		vertical-align: middle;
	}
	.button {
		action-button($green, #fff, 0 3px 3px 0, 0);
		border: none;
		font-size: $xxl;
		height: 38px;
		line-height: 1;
		width: 40px;
	}
	.text-field {
		border-color: $green;
		border-radius(3px 0 0 3px);
        width: 255px;
		&:focus {
	    	border-color: $green;
	    	box-shadow(0 0 1px 1px rgba(0,0,0,.1));
	    	color: $black;
	    }
	}
}

.text-field {
	border-color: $greyBorders;
	border-radius();
	border-style: solid;
	border-width: 1px;
	color: #ccc;
	font-size: $s;
	line-height: 1;
	padding: 0 10px;
    height: 36px;
    &:focus {
    	border-color: #999;
    	box-shadow(0 0 1px 1px rgba(0,0,0,.1));
    	color: #000;
    }
}

.title-module {
	font-size: $m;
	font-weight: normal;
	line-height: 1;
	margin: 0;
}

.wrapper-main {
	margin: auto;
	max-width: 980px;
}
