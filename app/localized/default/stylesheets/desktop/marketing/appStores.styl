.appStores {
    .container-stores {
        display: inline-block;
        vertical-align: middle;
        a {
            display: inline-block;
            vertical-align: middle;
            img {
                display: block;
                max-height: 40px;
            }
        }
    }

    p {
        cursive($violet, $s);
        display: inline-block;
        text-transform: uppercase;
        margin: 0;
        text-align: center;
        vertical-align: middle;
    }

    .icon-sketchyarrow::before { 
        float: right;
        font-size: $m;
        text-transform: lowercase;
        margin: -3px 5px 0;
        transform(rotate(270deg));
    }
}
