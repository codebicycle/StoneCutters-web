#featuread-modal {
    .modal-container {
        width: 720px;
        .modal-header {
            padding: 10px 20px;
            .modal-title {
                font-size: $xl;
            }
        }
        .modal-content {
            min-height: 400px;
            padding: 10px 20px;
            #feature-ad {
                h2 {
                    font-size: $m;
                    small {
                        display: block;
                        font-weight: normal;
                    }
                }
            }
            .fad-edit {
                padding: 0;
                a {
                    border-radius();
                    action-button($greyStrong, $white, 3px, 10px 20px);
                    display: block;
                    font-size: $m;
                    font-weight: bold;
                    line-height: 1;
                }
            }
            .fad-submit {
                input {
                    border-radius();
                    action-button($orange, $white, 3px, 10px 20px);
                    font-size: $m;
                    font-weight: bold;
                    line-height: 1;
                }
            }
            .feature-ad-terms {
                font-size: $xs;
            }
        }
    }
}