@import '../helpers/variables.styl';
@import '../helpers/mixins.styl';

.header-view {
	margin: 0 0 20px 0;
	position: relative;
	box();
	clear-fix();

	&::before {
	  background-image: -moz-linear-gradient(left center, $violet 14%, $green 14%, $green 28%, $orange 28%, $orange 42%, $violet 42%, $violet 56%, $green 56%, $green 70%, $orange 70%, $orange 84%, $violet 84%, $violet 100%);
	  bottom: 100%;
	  content: "";
	  height: 5px;
	  left: 0;
	  position: absolute;
	  width: 980px;
	}

	.brand {
		left: 30px;
		margin: 0;
		position: absolute;
		top: -13px;

		img {
			display: block;
		}
	}

	.posting {
		background: $orange;
		background-image: -moz-linear-gradient(center top, rgba(255, 255, 255, .25), rgba(255, 255, 255, 0));
		background-image: -ms-linear-gradient(center top, rgba(255, 255, 255, .25), rgba(255, 255, 255, 0));
		background-image: linear-gradient(to bottom, rgba(255, 255, 255, .25), rgba(255, 255, 255, 0));
		border-color: rgba(0, 0, 0, .1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, .25);
		border-radius: border-radius(3px 0 0 3px);
		border-style: solid;
		border-width: 1px;
		box-shadow: 0 1px 0 rgba(255, 255, 255, .2) inset, 0 1px 2px rgba(0, 0, 0, .05);
		color: #fff;
		float: right;
		font-size: 1.53em;
		font-weight: bold;
		line-height: 1;
		padding: 15px 30px;
		position: relative;
		text-align: center;
		text-shadow: 0 -1px 0 rgba(0, 0, 0, .25);

		/*&::after {
			content: "";
			border-bottom: 26px solid transparent;
