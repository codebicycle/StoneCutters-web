.post_flow_hub_view {

	counter-reset: index;

	.images {
		
		position: relative;
		overflow: hidden;
	
		&.compact {

			padding: 10px;

			.action {

				overflow: hidden;
				display: table;
				table-layout: fixed;
				width: 100%;

			}
			
			.display {

				position: relative;
				display: none;
				width: 100px;
				height: 100px;
				font-size: 0;
				line-height: 0;
				vertical-align: bottom;
				border-right: solid 10px #FFF;
				background: #EEE url(imageUrl/images/html5/post/flow/waiting.gif) no-repeat center center;

			}
			
			.ammount {

				position: absolute;
				right: 0;
				bottom: 0;
				float: right;
				width: 2rem;
				height: 2rem;
				background: rgba(0, 0, 0, .5);
				color: #FFF;
				font-size: 1rem;
				line-height: 2rem;
				font-weight: bold;
				text-align: center;
				
				&.hidden {

					display: none;

				}

			}
			
			.text {

				display: table-cell;
				height: 98px;
				vertical-align: middle;
				background: #DDD;
				border: thin dashed #999;
				text-align: center;
				
				> span {

					display: table;
					width: 100%;
					
					&:before {

						content: url(imageUrl/images/html5/post/flow/camera_icon_02.png);
						display: table-cell;
						padding: 0 10px;
						font-size: 0;
						line-height: 0;
						text-align: right;
						vertical-align: middle;

					}
					
					span {

						display: table-cell;
						padding-right: 10px;
						text-align: left;
						vertical-align: middle;

					}

				}

			}
			
			.hint {

				padding: .25rem .5rem;
				margin-top: 10px;
				background-color: #666;
				color: #FFF;
				text-align: center;
				font-size: .8125rem;
				line-height: 1em;
				
				&:before {

					content: url(imageUrl/images/html5/post/flow/exclamation_icon.png);
					display: inline-block;
					margin-right: .5rem;
					font-size: 0;
					line-height: 0;
					vertical-align: top;

				}
				
			}
			
			&.fill {

				.display {

					display: table-cell;
					background-size: cover;

				}
				
			}
			
			&.pending {

				.display {

					display: table-cell;

				}
				
				.hint:before {

					display: none;

				}

			}

		}
		
		&.default {

			.action {

				overflow: hidden;
				width: 100%;
				padding-top: 66.6666%;
				background: #DDD url(imageUrl/images/html5/cameraBig.png) no-repeat center center;
				background-size: 45% auto;

			}
			
			.display {

				display: none;
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				padding-bottom: 66.6666%;
				background-size: cover;
				background-repeat: no-repeat;
				background-position: center center;

				&.r6 {

					padding-bottom: 100%;
					margin-top: -16.6666%;
					-ms-transform: rotate(90deg);
					-webkit-transform: rotate(90deg);
					transform: rotate(90deg);

				}

				&.r3 {

					-ms-transform: rotate(180deg);
					-webkit-transform: rotate(180deg);
					transform: rotate(180deg);

				}

				&.r8 {

					padding-bottom: 100%;
					margin-top: -16.6666%;
					-ms-transform: rotate(270deg);
					-webkit-transform: rotate(270deg);
					transform: rotate(270deg);

				}

			}
			
			.text {

				position: absolute;
				top: 0;
				left: 0;
				display: block;
				width: 100%;
				height: 100%;
				padding: 42% 35% 19%;
				-moz-box-sizing: border-box;
				-webkit-box-sizing: border-box;
				box-sizing: border-box;
				font-size: 4vw;
				color: #A3B606;
				text-align: center;

			}
			
			&.fill {

				.display {

					display: block;

				}

				.text {

					display: none;

				}

			}

			&.pending {

				&:after {

					content: '';
					position: absolute;
					z-index: 1;
					top: 0;
					right: 0;
					bottom: -1.5em;
					left: 0;
					background-color: rgba(255, 255, 255, .75);
				    background-image: url(imageUrl/images/html5/loading.gif);
				    background-position: center center;
				    background-repeat: no-repeat;

				}

			}

			.hint {

				position: relative;
				overflow: hidden;
				padding: 0 1em;
				background-color: #5c2a81;
				color: #FFF;
				height: 1.5em;
				line-height: 1.5em;
				text-align: center;

				small {

					display: block;
					overflow: hidden;
					font-size: .75em;
					text-overflow: ellipsis;
					white-space: nowrap;

				}

			}

		}

	}
		
	li {
		
		position: relative;
		overflow: hidden;
		padding: 1rem;
		cursor: pointer;

		&:not(:first-child) {

			border-top: solid thin #CCC;

		}

		&:before {
			
			width: 2rem;
			height: 2rem;
			display: block;
			position: absolute;
			top: 1.5rem;
		    right: 1rem;
			background-color: #555;
		    border-radius: 100%;
		    color: #fff;
		    content: counter(index, decimal);
		    counter-increment: index;
		    font-size: 1.5rem;
		    line-height: 2rem;
		    text-align: center;
		    font-weight: bold;
		
		}

		h3 {
			
			position: relative;
			padding: 0;
			z-index: 1;
			overflow: hidden;
			font-weight: normal;
			font-size: 1em;
			line-height: 3em;
			color: #333;
			white-space: nowrap;
			text-overflow: ellipsis;
		
		}

		.stepSummary {

			display: none;
			margin: -.5em 0;
			padding-right: 2.5rem;

			div {

				font-size: .8em;
				padding: .125em 0;

			}

			small {

				display: block;
				overflow: hidden;
				font-size: .66em;
				text-transform: uppercase;
				color: #999;
				white-space: nowrap;
				text-overflow: ellipsis;

			}

			span {

				display: block;
				overflow: hidden;
				color: #333;
				white-space: nowrap;
				text-overflow: ellipsis;

				&.error {

					color: #C00;

					&:before {

						content: '\2717\00a0';

					}

				}

				&.success {

					&:before {

						content: '\2713\00a0';
						color: #A3B606;

					}

				}

			}

		}

		&.error {

			background-color: #FEE;

			&:before {

				background-color: #d38811;
    			content: "!";

			}

			h3 {

				display: none;

			}

			.stepSummary {

				display: block;

			}

		}

		&.success {

			&:before {

				background: #a7b52c;

			}

			h3 {

				display: none;

			}

			.stepSummary {

				display: block;

			}

		}

	}

	footer {

		padding: 1rem;
		background-color: #F60;
		color: #FFF;
		text-transform: uppercase;
		text-align: center;

	}

}
