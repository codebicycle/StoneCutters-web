#breadcrumb, #listing-breadcrumb {
    clear-fix();
    color: $black;
    font-size: $xs;

    .breadcrumb-navigation {
        float: left;
        padding: 0 0 6px;

        a,
        span,
        .count {
            display: inline-block;
            vertical-align: middle;
        }
        a {
            font-size: $xs;
            &::before {
                vertical-align: baseline;
                line-height: initial;
            }
        }
        .count {
            color: $greyStrong;
        }
        .icon-arrow:before {
            font-size: remify(8px);
            margin: 0 4px;
        }
    }
    .back-to-results {
        a {
            font-size: $xs;
            height:28px;
            display: inline-block;
            &.icon-arrow-left:before {
                font-size: remify(8px);
                margin: 0 4px 3px 0;
            }
        }
    }
    .breadcrumb-pagination {
        float: right;
        a {
            color: $greyStrong;
            display: inline-block;
            vertical-align: middle;
            padding: 6px;
            &.disable {
                color: $greyBorders;
                cursor: default;
            }
            &:hover {
                color: $black;
            }
            &.disable:hover {
                color: $greyBorders;
            }
            &[rel="next"] {
                border-left: 1px solid $greyBorders;
                &.icon-arrow-right:before {
                    margin-top: -3px;
                }
            }
        }
        p {
            display: inline-block;
            margin: 0;
            vertical-align: middle;
        }
    }

}
