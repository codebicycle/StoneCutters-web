header#location {

	padding: .4rem .8rem .2rem .8rem;
	background: #dadada;

	h1,
	h3,
	strong {

		width: 100%;
		display: inline-block;
		font-size: 1.063rem;
		color: #333;
		font-weight: normal;

		a {

			color: #1C7BD4;
			
			font-size: .75rem;

			&.big {

				font-size: 1.063rem;

			}

		}

		small {

			font-size: 0.6875rem;

		}

	}

}
