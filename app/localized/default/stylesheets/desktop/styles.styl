#progressBar {
    background: $orange;
    border-radius: 10%;
    height: 2px;
    left: 0;
    position: fixed;
    top: 0;
    transition(width 500ms ease-out,opacity 400ms linear);
    width: 0%;
    z-index: 999999;
}
.spinner {
    background: url(imageUrl/images/desktop/spinner-bgYellow.gif);
    display: block;
    height: 20px;
    width: 20px;
}

#partials-tracking-view {
    height: 0;
    width: 0;
}
.env-label {
    background: $orange;
    color: $white;
    font-size: $xs;
    left: 0;
    padding: 5px 10px;
    position: fixed;
    text-align: center;
    top: 0;
    z-index: 99999;
}

.hide {
    display: none;
}

.noscroll {
    overflow: hidden;
}

.posting {
    border-radius();
    action-button($orange, $white, 3px, 15px 30px);
    font-size: $l;
    font-weight: bold;
    line-height: 1;
}

.search-form {
    fieldset {
        border: none;
        margin: 0;
        padding: 0;
    }
    .button,
    .text-field {
        display: inline-block;
        vertical-align: middle;
    }
    .button {
        action-button($green, $white, 0 3px 3px 0, 0);
        border: none;
        font-size: $m;
        height: 38px;
        line-height: 1;
        width: 40px;
    }
    .text-field {
        border-color: $green;
        border-radius(3px 0 0 3px);
        width: 255px;
        &:focus {
            border-color: $green;
            box-shadow(0 0 1px 1px rgba(0,0,0,.1));
            color: $black;
        }
    }
}

.text-field {
    border-color: $greyBorders;
    border-radius();
    border-style: solid;
    border-width: 1px;
    color: $greyStrong;
    font-size: $s;
    height: 36px;
    line-height: 1.2;
    padding: 0 10px;
    &:focus {
        border-color: $greyStrong;
        box-shadow(0 0 1px 1px rgba(0,0,0,.1));
        color: $black;
    }
}

.title-module {
    font-size: $m;
    font-weight: normal;
    line-height: 1;
    margin: 0;
    .text-field {
        border-color: $greyBorders;
        border-radius();
        border-style: solid;
        border-width: 1px;
        color: $greyStrong;
        font-size: $s;
        height: 36px;
        line-height: 1;
        padding: 0 10px;
        &:focus {
            border-color: $greyStrong;
            box-shadow(0 0 1px 1px rgba(0,0,0,.1));
            color: $black;
        }
    }
}

.short-page {
    min-height: 240px;
}

.wrapper-main {
    clear-fix();
    margin: auto;
    width: 980px;
}

