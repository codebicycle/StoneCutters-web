#seo-box {
    box();
    clear-fix();
    clear: both;
    margin-top: 30px;
    padding: 20px;

    .title {
        border-bottom: 1px solid $greyBorders;
        display: block;
        font-size: $s;
        font-weight: bold;
        margin-bottom: 10px;
        padding-bottom: 10px;
    }
    ul {
        ul-reset();
        padding: 0 10px 0 0;
        li {
            display: inline-block;
            font-size: $xs;
            vertical-align: top;
            width: 24%;

            a {
                color: #blue;
            }
        }
        &.twoColumn li {
            width: 48%;
        }
        &.threeColumn li {
            width: 32%;
        }
    }
    .top-searches {
        font-size: $xs;
        margin: 0;
        a:not(:last-child)::after {
            color: $black;
            content: "-";
            margin-left: 2px;
        }
    }
    .level-path-bottom {
        span {
            font-size: $xs;
            &::before {
                color: $greyStrong;
                font-size: remify(7px);
            }
        }
    }
    &.seo-item-page {
        width: 620px;
    }
    &>div:not(:first-child) {
        margin-top: 20px;
    }
}
