.posting-contact-view {
    box($white, $greyBorders , 3px, 0, solid, 1px);

    .icon-lock::before {
        font-size: $s;
        margin-bottom: 3px;
        padding-right: 5px;
    }

    .seller-post {
        clear-fix();
        margin: 0;
        padding: 10px 10px 20px 222px;
        border: none;

        .posting {
            display: block;

            &[disabled],
            &[disabled]:hover {
                background: $greyBorders;
            }
        }
    }

    .icon-exclamation::before {
        font-size: 1rem;
        margin-bottom: 3px;
        padding-right: 5px;
    }
}
