.posting-images-view {
	position: relative;

	.advice {
		margin: 0;
	}

	.image-input-file {
		  height: 0;
		  left: -99999px;
		  opacity: 0;
		  position: absolute;
		  top: -99999px;
		  width: 0;
	}

	.file-upload {
		ul-reset();
		max-width: 440px;

		.image-cont {
			border: 1px dashed $blue;
			display: inline-block;
			height: 75px;
			line-height: 75px;
			margin: 0 0 10px 10px;
			opacity: .3;
			position: relative;
			text-align: center;
			transition(250ms);
			vertical-align: top;
			width: 100px;

			&:first-child,
			&:nth-child(4n + 1) {
				margin: 0 0 10px 0;
			}

			&:hover {
				cursor: pointer;
				opacity: 1;
			}

			.image {
				background: $lightBlue;
				bottom: 0;
				left: 0;
				position: absolute;
				right: 0;
				top: 0;

				&.icon-photo::before {
					color: $blue;
					font-size: remify(64px);
				}
			}
		}
	}
}