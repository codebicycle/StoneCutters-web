#myads {
    position: relative;
}
.users_myads_view {
    .breadcrumb {
        background: $ligthGrey;
        border-bottom: 1px solid #dadada;
        color: $violet;
        display: table;
        font-size: 16px;
        overflow: hidden;
        padding: 7px 10px;
        width: 100%;
    }
    .my-ads {
        .datetime, .title, .price {
            width: 50%;
        }
        &.ready .datetime {
            color: $green;
        }
        &.expired .datetime, &.deleted .datetime {
            color: $black;
        }
        &.rejected .datetime {
            color: $red;
        }
        &.pending .datetime {
            color: $yellow;
        }
        .price {
            text-align: left;
            color: $grey;
        }
        .btnfilter {
            padding: 7px;
            position: absolute;
            right: 10px;
            width: 15%;
            font-size: 14px;
            &.edit {
                top: 25px;
                color: $blue;
            }
            &.more {
                top: 65px;
                color: $darkGrey;
            }
            &:active {
                background-color: $grey;
            }
        }
    }
    .actions {
        position: absolute;
        left: 0;
        top: 100px;
        background: #fff;
        -webkit-box-shadow: 0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        -moz-box-shadow:    0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        box-shadow:         0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        width: 100%;
    }
}
