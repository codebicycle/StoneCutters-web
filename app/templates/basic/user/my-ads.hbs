<h1>My Ads</h1>
<table width="100%" border="0" align="left" cellspacing="0" cellpadding="4">
	<tbody>
		{{#each myAds}}
			<tr>
	            <td style="border-top: solid thin #808080;">
	                <a style="display: block;" tabindex="1" href="/items/{{id}}">
	                	<small style="display: block;">
	                		{{#if thumbnail }}
	                			*
	                		{{/if}}
	                    	{{title}} - {{price.displayPrice}}
	                	</small>
	                </a>
	            </td>
	        </tr>
        {{/each}}
	</tbody>
</table>