<table width="100%" cellspacing="0" cellpadding="4" border="0" bgcolor="#DDDDDD">
    <tr>
        <td style="border-top: solid thin #808080; border-bottom: solid thin #B0B0B0; padding:1px 4px;">
            <small>Logged {{#if user}}in as {{user.username}}{{else}}out{{/if}}!</small>
        </td>
    </tr>
</table>
<table width="100%" cellspacing="0" cellpadding="4" border="0" align="left">
	{{#each categories.models}}
		<tr>
			<td style="border-top: solid thin #808080;">
				<a style="display: block;" href="categories/{{id}}?location={{../siteLocation}}">
					<small style="display: block;"><img border="0" alt="" src="" />{{trName}}</small>
				</a>
			</td>
		</tr>
	{{/each}}
</table>
