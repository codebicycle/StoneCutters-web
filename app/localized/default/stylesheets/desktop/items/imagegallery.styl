@import '../helpers/variables.styl';
@import '../helpers/mixins.styl';
@import '../helpers/functions.styl';

#image-gallery {
    height: 400px;
    .img-viewer {
        // border: 1px solid grey(20%)
        box(#f2f2f2, grey(20%) , 0, 0);
        float: left;
        height: 100%;
        width: 540px;
    }
    .img-navigator {
        float: right;
        height: 100%;
        ul {
            list-style: none;
            margin: 0;
            padding: 0;
            li {
                height: 60px;
                width: 60px;
                a {
                    box(#f2f2f2, grey(20%) , 0, 0);
                    color: grey(20%);
                    height: 100%;
                    width: 100%;
                }
            }
        }
    }
}