.users_myads_view {

    .buttons {
        display: table-row;
        height: 31px;
        vertical-align: bottom;
        &.deleteitem {
            padding: 1rem;
            display: inline-block;
            line-height: 2.3;
        }
    }

    .formdeleteitem {
        box($white, $greyBorders,0 0 3px 3px, 0,solid , 1px)
        width: 100%;
        display: none;

        .confirmdelete {
            margin: 0 auto;
            width: 50%;
            padding: 20px 0;

            .subtitle {
                color: $black;
                font-size: 1.5rem;
                margin: 0 0 15px 0;
            }

            .itemdelete {
                overflow: hidden;
                margin: 0 0 15px 0;
                .image {
                    border-styles($greyBorders, 3px, solid, 1px);
                    display: inline-block;
                    float: left;
                    margin: 0 10px 0 0;
                    max-height: 50px;
                    min-height: 50px;
                    padding: 2px;
                    position: relative;
                    text-align: center;
                    width: 78px;

                    .withoutimg {
                        color: $greyBorders;
                        display: block;
                        font-size: 25px;
                        margin: 0 auto;
                        max-width: 100%;
                        padding: 9px 0;
                    }

                    img {
                        bottom: 2px;
                        left: 2px;
                        margin: auto;
                        max-height: 50px;
                        max-width: 100%;
                        position: absolute;
                        right: 2px;
                        top: 2px;
                    }
                }

                .description {
                    color: $greyBorders;
                }
            }

            h5 {
                font-size: 1.3rem;
                margin: 0 0 15px 0;
            }

            form {
                border-styles($greyBoxBg, 0, solid, 1px);

                .reason {
                    padding: 10px;
                    border-bottom: 1px solid $greyBoxBg;
                    overflow: hidden;

                    input {
                        display: inline-block;
                        margin-right: 5px;
                        &.text {
                            padding: 5px;
                            width: 238px;
                            border: 1px solid $greyBoxBg;
                            line-height: 1;
                            display: inline-block;
                        }
                    }
                    label {
                        display: inline-block;
                        margin-right: 5px;
                        line-height: 1;
                        font-size: 100%;
                    }
                    &:last-child {
                        border-bottom: 0;
                    }
                }
                &.active {
                    background: $greyBoxBg;
                }
            }
        }

        .backtomyolx {
            margin: 20px 40px 0 40px;
            display: block;

            &:before {
                color: $black;
                font-size: .6rem;
                transform(rotate(180deg));
            }
        }
    }
}

