#myads {
    position: relative;
}
.users_myads_view {
    #messages {
        font-size: 14px;
        font-weight: bold;
        background-color: #494949;
        color: $white;
        padding: 5px 0;
        text-align: center;
    }
    .breadcrumb {
        background: $ligthGrey;
        border-bottom: 1px solid #dadada;
        box-sizing: border-box;
        color: $violet;
        display: table;
        font-size: 16px;
        height: auto;
        overflow: hidden;
        padding: 7px 10px;
        width: 100%;
    }
    .my-ads {
        .datetime, .title, .price {
            width: 44%;
        }
        &.ready .datetime {
            color: $green;
        }
        &.expired .datetime, &.deleted .datetime {
            color: $black;
        }
        &.rejected .datetime {
            color: $red;
        }
        &.pending .datetime {
            color: $yellow;
        }
        .price {
            color: $grey;
            display: inline-block;
            text-align: left;
        }
        .btnfilter {
            font-size: 14px;
            padding: 7px;
            position: absolute;
            right: 10px;
            width: 15%;
            &.edit {
                top: 30px;
                color: $blue;
            }
            &.more {
                top: 70px;
                color: $darkGrey;
            }
            &.active {
                background-color: #dedede;
            }
        }
    }
    .actions-show {
        -moz-box-shadow:    0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        -webkit-box-shadow: 0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        box-shadow:         0px 0px 15px 0px rgba(96, 96, 96, 0.75);
        background: #fff;
        border-radius: 3px;
        left: 0;
        margin: 3px 2% 0;
        position: absolute;
        top: 0;
        width: 96%;
        .action {
            background-position: 8px center;
            background-repeat: no-repeat;
            box-sizing: border-box;
            color: $black;
            float: left;
            padding: 5px 5px 5px 40px;
            width: 32%;
            &.view {
                background-image: url(imageUrl/images/html5/myads_view.png);
                text-transform: capitalize;
            }
            &.delete {
                background-image: url(imageUrl/images/html5/myads_delete.png);
            }
            &.help {
                background-image: url(imageUrl/images/html5/myads_help.png);
            }
        }
    }
    #formdeleteitem {
        color: $black;

        .subtitle,
        h5 {
            font-size: 14px;
            padding: 20px 10px;
            color: $black;
            box-sizing: border-box;
        }
        .itemdelete {
            overflow: hidden;
            padding: 0 10px;
            .image {
                float: left;
                margin-right: 10px;
                min-height: 76px;
                max-height: 76px;
                display: inline-block;
                text-align: center;
                width: 76px;
                border: 1px solid #eee;
                padding: 2px;
                position: relative;
                .withoutimg,
                img {
                    bottom: 2px;
                    left: 2px;
                    margin: auto;
                    max-height: 76px;
                    max-width: 100%;
                    position: absolute;
                    right: 2px;
                    top: 2px;
                }
                .withoutimg {
                    background: #fff url(imageUrl/images/html5/noPhoto.png) 50% 50% no-repeat;
                }
            }
            .description {
                font-size: 14px;
            }
        }
        .formdelete {
            .reason {
                padding: 10px;
                border-bottom: 1px solid #eee;
                overflow: hidden;
            }
            input[type="radio"] {
                margin-right: 5px;
            }
            input[type="text"] {
                padding: 5px;
                margin-left: 5px;
                width: 70%;
                border: 1px solid #eee;
            }
            input[type="radio"],
            input[type="text"],
            label {
                display: inline-block;
                font-size: 14px;
            }
            .deleteitem {
                margin-top: 20px;
                text-align: center;
            }
        }

        .accept {
            background: #aab22a;
            border-color: #919b00;
            border-radius: 3px;
            border: 1px solid;
            box-sizing: border-box;
            color: #fff;
            font-size: .8125rem;
            font-weight: bold;
            height: 40px;
            line-height: 40px;
            text-align: center;
            text-decoration: none;
            padding: 0 10px;
        }

    }
}
