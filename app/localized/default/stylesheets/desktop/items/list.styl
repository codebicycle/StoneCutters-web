@import '../helpers/variables.styl';
@import '../helpers/mixins.styl';

.items-list {
    ul-reset();
    border-bottom: 1px solid #ddd;
    display: block;
    margin: 10px 0;

    li {
        box(#fff, #ddd, 0, 5px);
        border-bottom-color: #fff;
        &:hover {
            border: 1px solid #ccc;
        }

        a {
            display: block;
        }
        p, .item-image {
            display: inline-block;
            vertical-align: top;
            margin: 0;
        }
        p {
            padding-top: 10px;
        }
        .item-image {
            width: 141px;
            height: 110px;
            border: 1px solid #ccc;
            text-align: center;

            img {
                width: 100%;
                display: inline-block;
                vertical-align: middle;
            }
        }
        .item-info {
            width: 340px;
            font-size: 1.231rem;
            padding-left: 5px;
            span {
                color: #666;
                font-size: .9231rem;
            }
        }
        .item-price {
            width: 148px;
            font-weight: bold;
            font-size: 1.231;
            color: #000;
        }
        .item-date {
            width: 72px;
            color: #666;
            font-size: .9231rem;
        }
    }
}
