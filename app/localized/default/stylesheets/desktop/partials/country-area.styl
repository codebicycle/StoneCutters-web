.country-area {
    clear-fix();
    box();
    background: $white;
    background: -moz-linear-gradient(top, $white 20%, $greyPageBg 20%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(20%,$white), color-stop(20%,$greyPageBg));
    background: -webkit-linear-gradient(top, $white 20%, $greyPageBg 20%);
    background: -ms-linear-gradient(top, $white 20%, $greyPageBg 20%);
    background: linear-gradient(to bottom, $white 20%, $greyPageBg 20%);
    float: left;
    margin-bottom: 20px;
    padding-bottom: 20px;
    width: 578px;
    img {
        margin: 15px 0 0 10px;
    }

    .content-description {
        float: right;
        width: 300px;

        .title {
            color: $green;
            font-size: $xl;
            font-weight: bold;
            margin: 14px 0 0;
        }
        .cities-title {
            color: $greyStrong;
            font-size: $l;
            margin: 47px 0 10px;
            padding-left: 25px;
            &::before {
                font-size: $l;
                margin-left: -25px;
                padding-right: 5px;
                vertical-align: inherit;
            }
        }
        .list-cities {
            ul-reset();
            padding-left: 25px;
        }
        li {
            line-height: 1.3;
            padding-bottom: 10px;
        }
    }
}
