#notfound {
    box();
    clear-fix();
    text-align: center;
    img {
        display: block;
        margin: 20px auto 0;
    }
    .message {
        color: $greyStrong;
        font-size: $l;
        font-weight: normal;
        margin: 20px 0 0;
    }
    h3 {
        font-size: $xl;
        font-weight: normal;
        margin: 30px 0 20px;
    }
    ul {
        ul-reset();
    }
    .options {
        box($yellowPosting, $green, 3px, 15px, solid, 1px)
        margin: 25px auto;
        position: relative;
        width: 285px;
        text-align: left;
        tab-arrow(bottom, $yellowPosting, $green, 1px, 18px, 90);
        &::before,
        &::after {
            left: 32px;
        }
        list-style-type: inherit;
        list-style-position: inside;
        li {
            line-height: 1.5;
        }
    }
    .search-form {
        display: inline;
        fieldset {
            margin: 0 auto;
            position: relative;
            width: 317px;
            &::before,
            &::after {
                border-bottom: 1px solid $greyBorders;
                content: "";
                height: 19px;
                position: absolute;
                top: 0;
                width: 295px;
            }
            &::before {
                margin-right: 15px;
                right: 100%;
            }
            &::after {
                left: 100%;
                margin-left: 15px;
            }
        }
    }
    .category-list {
        display: inline-block;
        float: none;
        padding: 0;
        text-align: center;
        width: auto;
        &:last-child {
            padding: 0;
        }
        .category {
            float: left;
            height: 140px;
            margin: 0 3px;
            width: 130px;
            .category-link {
                float: left;
                font-size: $m;
                width: 100%;
            }
        }
        a {
            .icon {
                margin: 20px auto 9px;
            }
        }
    }
    .subtitle {
        margin: 50px 0 30px;
    }
}
