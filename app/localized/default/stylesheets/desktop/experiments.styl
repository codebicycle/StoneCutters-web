.experiment-growth-categories-suggestion {
    &.alternative-single,
    &.alternative-suggested {
        .posting-category-suggestion {
            float: left;
            width: 440px;

            #posting-category-suggestion-button {
                action-button($greyBoxBg, $black, 3px, 10px 30px, 0);
                font-size: $s;
                line-height: $s;
            }

            &.loading {
                #posting-category-suggestion-button {
                    background-color: #eee;
                    color: $disableText;
                    cursor: wait;

                    &:hover {
                        background-color: #eee;
                    }
                }

                &::after {
                    background: transparent url(imageUrl/images/desktop/validating.gif) no-repeat;
                    content: '';
                    display: inline-block;
                    margin: 9px;
                    square(16px);
                    vertical-align: top;
                }

                .posting-categories-suggested {
                    display: none;
                }

                & + .posting-categories-list {
                    display: none !important;
                }
            }

            .posting-categories-suggested {
                ul-reset();

                .suggest, .selected {
                    border-radius(3px);
                    border: 1px solid $greyBoxBg;
                    margin-bottom: 3px;
                    overflow: hidden;
                    padding: 10px;

                    span {
                        display: inline-block;
                        font-size: $m;
                        line-height: 1;
                        width: 240px;
                    }

                    small {
                        color: $greyStrong;
                        font-size: $xs;
                    }

                    a {
                        display: inline-block;
                        float: right;
                        font-size: $xs;

                        &:hover {
                            text-decoration: none;
                        }
                    }
                }

                .suggest {
                    background-color: $greyBoxBg;
                    color: $blue;

                    a {
                        action-button($greyBoxBg, $black, 3px, 5px 10px, 0);
                    }

                    &:first-child {
                        background-color: $white;
                        border-color: $greyBorders;
                        color: $black;
                    }
                }

                .icons::before {
                    font-size: 26px;
                    margin-right: 10px;
                    vertical-align: top;
                }

                .selected {
                    background-color: $white;
                    border-color: $green;
                    color: $black;

                    a {
                        action-button($green, $white, 3px, 5px 10px, 0);
                    }
                }

                .more {
                    float: right;

                    a {
                        color: $blue;
                        font-size: $xs;
                    }
                }
            }
        }

        &:not(.edition) .posting-categories-list {
            display: none;
        }
    }
}

.dgd-hide-phone-number {

    position: relative;
    padding-left: 1.5em;

    &:before {

        position: absolute;
        top: 0;
        left: 0;

    }

    .action-container {

        display: block;
        font-size: $xs;
        font-weight: normal;

    }

}

.experiment-dgd-mark-visited-items {

    &.alternative-mark-visited-items {

        &.visited {

            &:before {

                content: 'Visto';
                display: block;
                position: absolute;
                top: 18px;
                left: 18px;
                text-transform: uppercase;
                color: #FFF;
                font-size: $xs;
                background-color: rgba(0, 0, 0, .5);
                padding: .25em .5em;
                text-shadow: 1px 1px 1px rgba(0, 0, 0, .75);
                z-index: 1;

            }

            a {
                color: #95B;
            }

            a:hover {
                color: #628;
            }

            img {
                opacity: .75;
            }

        }

    }

}

.experiment-growth-load-image-from-mobile {
    background: #fff url(imageUrl/images/desktop/experiments/posting_icon_mobiletoweb.gif) no-repeat 12px 50%;
    border-radius: 4px;
    border: 1px solid #ccc;
    display: inline-block;
    min-height: 55px;
    padding: 15px;
    position: absolute;
    right: 20px;
    tab-arrow('left', #fff, #ccc, 1px, 10px, 1);
    width: 255px;

    span {
        color: $black;
        display: block;
        font-size: $s;
        margin: 0 0 5px 75px;

        &:last-child {
            display: none;

            &::before {
                -moz-osx-font-smoothing: grayscale;
                -webkit-font-smoothing: antialiased;
                content: "\6c";
                color: #ccc;
                float: left;
                font-family: 'olx-icon-font';
                font-size: 44px;
                font-style: normal;
                font-weight: normal;
                line-height: 1;
                margin-right: 10px;
                speak: none;
                vertical-align: text-top;
            }
        }
    }

    a {
        display: block;
        font-size: $s;
        margin-left: 75px;
        action-button($green, $white, 3px, 5px, true);
    }

    &.msj, &.loading {
        a, span {
            display: none;
        }
    }

    &.msj {
        background-image: none;

        span:last-child {
            display: block;
            margin-left: 0;
        }
    }

    &.loading {
        background-image: url(imageUrl/images/desktop/spinner-bgYellow.gif);
        background-position: 35px 50%;
    }
}

.success-pusher-listers {
    box(#ffffcc, #ffee77, 3px, 20px 20px 20px 20px, solid, 1px);
    clear-fix();
    margin-bottom: 20px;
    min-height: 50px;
    position: relative;
    text-align: center;

    h3 {
        font-weight: normal;
    }

    div {
        margin: auto;
        width: 776px;

        section {
            float: left;
            height: 160px;
            margin: 15px;
            width: 160px;

            a:hover {
                text-decoration: none;
            }

            img {
                margin-bottom: 20px;
            }
                
            .posting {
                font-size: 14px;
                margin-top: 10px;
                padding: 10px 20px;
            }
        }
    }

}
