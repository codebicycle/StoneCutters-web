section#login {
	padding: .9375rem;
}
section#login form label,
section#login form p {
	margin: .6rem 0 0 0;
	color: #494848;
	display: block;
	font-size: 1rem;
}
section#login form .hint {
	margin: 0;
}
section#login form .hint small {
	display: block;
}
section#login form label:first-child {
	margin: 0;
}
section#login a {
	text-decoration: underline;
}
section#login form a {
	color: #4275BA;
	text-decoration: none;
}
section#login form small {
	margin: -5px 0 0 0;
	font-size: 12px;
	color: #333;
}
section#login form > input {
	width: 100%;
	height: 2.3rem;
	display: block;
	padding: .5rem;
	margin: .2rem 0 0;
	-moz-box-sizing: border-box;
	border: 1px solid #6891C8;
    border-radius: 0.5em;
}
section#login div.btnCenter {
	text-align: left;
	padding: 1rem 0;
}
section#login form div.btnCenter input, section#login div.btnCenter a{
	display: inline-block;
    font-size: 1rem;
    padding: 0.5rem 1rem;
}
section#login h4 {
	width: 100%;
	padding: .5rem 0;
	color: #333;
}
section#login form > input[type='checkbox'] {
	width: auto;
	height: .5rem;
	float: left;
	margin: .8rem .5rem 0 0;
}
section#login > a {
	color: #0000EE;
	font-size: 0.6875rem;
}
