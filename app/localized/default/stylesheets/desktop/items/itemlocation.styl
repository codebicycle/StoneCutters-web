.item-location {
    clear-fix();
    margin: 20px 0;
    .box,
    .map {
        box($white, $greyBorders, none, 0 15px 18px, solid, 1px);
        height: 140px;
        width: 275px;
    }
    .box {
        float: left;
        .icon-pin::before {
            font-size: 1.9rem;
        }
        .icon-zoom::before {
            font-size: 1.5rem;
        }
        p,
        a {
            margin-left: 30px;
            span {
                display: block;
            }
        }
    }
    .map {
        float: right;
    }
}