#image-gallery {
    height: 435px;
    .img-viewer {
        box(#f2f2f2, grey(20%) , 0, 0);
        display:inline-block;
        height: 100%;
        width: 540px;
        position: relative;

    }
    .img-navigator {
        display:inline-block;
        height: 100%;
        margin-left: 14px;
        vertical-align:top;
        ul {
            ul-reset();
            li {
                height: 60px;
                width: 60px;
                box(#f2f2f2, grey(20%) , 0, 0);
                color: grey(20%);
                position: relative;

                &:not(:last-child) {
                    margin-bottom: 15px;
                }



            }
        }
    }
    img {
        bottom: 0;
        left: 0;
        margin: auto;
        max-height: 100%;
        max-width: 100%;
        position: absolute;
        right: 0;
        top: 0;
        cursor: pointer;
    }
}
