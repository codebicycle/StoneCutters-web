#terms {
	padding: 0 16px 16px;
	font-size: 13px;
	color: #333;
	text-align: justify;
}

#terms h4 {
	padding: 16px 0 0;
	font-weight: bold;
	color: #000;
	border-bottom: solid thin #CCC;
}

#terms p {
	padding: 16px 0 0;	
}

#terms a {
	color: #0066FF;
}

#terms ul {
	padding: 8px 0 0 26px;
	list-style: disc;
}

#terms li {
	padding-top: 8px;
	list-style: disc;
}
