action-button(bgcolor = #ccc, fontcolor = #fff, radius = 3px, padding = 10px)
    background: bgcolor;
    background-image: -moz-linear-gradient(center top, rgba(255, 255, 255, .25), rgba(255, 255, 255, 0));
    background-image: -ms-linear-gradient(center top, rgba(255, 255, 255, .25), rgba(255, 255, 255, 0));
    background-image: linear-gradient(to bottom, rgba(255, 255, 255, .25), rgba(255, 255, 255, 0));
    border-color: rgba(0, 0, 0, .1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, .25);
    border-radius(radius);
    border-style: solid;
    border-width: 1px;
    box-shadow: 0 1px 0 rgba(255, 255, 255, .2) inset, 0 1px 2px rgba(0, 0, 0, .05);
    color: fontcolor;
    padding: padding;
    text-align: center;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, .25);
    &:hover
        text-decoration: none;

arrow(bgColor, borderW )
    position: absolute
    display: inline-block
    border-color: bgColor
    border-image: none
    border-style: solid
    border-width: borderW
    content: ""

border-styles(color = #e4e4e4, radius = 3px, style = solid, width = 1px)
    border-color: color;
    border-radius(radius);
    border-style: style;
    border-width: width;

border-radius(n = 3px)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n

box(bgcolor = #fff, bordercolor = #e4e4e4 , radius = 3px, padding = 8px, style = solid, width = 1px)
    background: bgcolor;
    border-styles(bordercolor, radius, style, width);
    padding: padding;

box-shadow(args)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args

box-sizing()
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;

clear-fix()
    &:after
        content: " ";
        clear: both;
        display: block;

tab-arrow(position, bgColor, borderColor, borderWidth, size, zIndex)
    &:after, &:before
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
        z-index: zIndex;
        if position == top
            bottom: 100%;
            left: 50%;
        else if position == right
            left: 100%;
            top: 50%;
        else if position == bottom
            top: 100%;
            left: 50%;
        else if position == left
            right: 100%;
            top: 50%;
    &:after
        border-color: alpha(bgColor, 0);
        border-width: size;
        if position == top
            margin-left: - size;
            border-bottom-color: bgColor;
        else if position == right
            margin-top: - size;
            border-left-color: bgColor;
        else if position == bottom
            margin-left: - size;
            border-top-color: bgColor;
        else if position == left
            margin-top: - size;
            border-right-color: bgColor;
    &:before
        border-color: alpha(borderColor, 0);
        border-width: borderWidth + size;
        if position == top
            margin-left: - (borderWidth + size);
            border-bottom-color: borderColor;
        else if position == right
            margin-top: - (borderWidth + size);
            border-left-color: borderColor;
        else if position == bottom
            margin-left: - (borderWidth + size);
            border-top-color: borderColor;
        else if position == left
            margin-top: - (borderWidth + size);
            border-right-color: borderColor;

ul-reset()
    margin: 0
    padding: 0
    list-style-type: none
