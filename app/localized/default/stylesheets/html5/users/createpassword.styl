.users_createpassword_view {
    overflow: hidden;
    padding: 10px;

    form {
        input:focus {
            outline: 0;
        }
        label {
            font-size: .875rem;
            font-weight: bold;
            margin-bottom: 3px;
            color: #303030;
        }
        input[type="password"] {
            border-radius: 3px;
            margin: 0;
        }
        .hint {
            margin-bottom: 20px;
        }
        .content-btns {
            clear: both;
            font-size: 0.875rem;
            margin-top: 20px;
            text-align: center;

            .accept {
                background: #aab22a;
                border-color: #919b00;
                border-radius: 3px;
                border: 1px solid;
                box-sizing: border-box;
                color: #fff;
                font-size: .8125rem;
                font-weight: bold;
                height: 40px;
                line-height: 40px;
                text-align: center;
                text-decoration: none;
                width: 40%;
            }
        }
        .fake-input {
            border-radius: 3px;
            border: 1px solid #d6d6d6;
            box-sizing: border-box;
            height: 40px;
            margin: 0;
        }

        .password-field {
            border: none;
            float: left;
            font-size: 1rem;
            height: 36px;
            line-height: 1.2;
            padding: 0 10px;
        }
        .password-field::focus {
            border: none;
            outline: 0;
        }

        .passwordToggle {
            color: $greyStrong;
            float: right;
            margin-top: 10px;
            margin-right: 10px;
            z-index: 5;
        }
    }
}
&.short-page {
    min-height: 150px;
}