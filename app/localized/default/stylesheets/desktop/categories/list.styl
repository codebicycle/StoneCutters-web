	}

	section.categories {
		width: 100%;
		height: 14.38rem;
		padding: 1.25rem 1.4rem;
		margin: 5rem 0 0 0; 
		background: #eee;
		z-index: 0;
		clear: left;
		-moz-box-sizing: border-box;
		-webkit-box-sizing: border-box;
		box-sizing: border-box;

		h3 {
	    	color: #628;
		    font-size: 1.125rem;
