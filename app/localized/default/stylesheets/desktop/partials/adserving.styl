.adserving-listing {
    .ads-csa-without-icon {
          background: $white;
          border: 1px solid $greyBorders;
          margin: 10px 0;
          padding: 10px;
    }
    .ads-csa iframe {
        border-bottom: none;
        display: block;
    }
}

.adserving-listing:not(:empty) + .items-list {
    margin-top: 0;
}

.items-list + .adserving-listing:not(:empty) {
    margin-bottom: 10px;
    margin-top: -10px;
}

.items-list + .adserving-listing .ads-csa iframe {
    border: 1px solid $greyBorders;
    border-top: none;
}
