.items_sort_view {
	font-size: .875rem;
	color: #494949;
	form#form-sort {
		fieldset {
			padding: 1.250rem .625rem;
			border: 0;
			border-bottom: 1px solid #ccc;
			&.center {
				text-align: center;
				position: fixed;
				bottom: 0;
				width: 100%;
				box-sizing: border-box;
			}
			&.no-border {
				border: 0;
			}
		}
		label {
			float: left;
			padding-right: .625em;
			&.block {
				width: 100%;
			}
		}

		input[type="checkbox"],
		input[type="radio"] {
			float: right;
		}
	}
	.filter-btns {
		border-radius: 3px;
	}

}
