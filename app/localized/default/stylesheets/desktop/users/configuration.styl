.users-configuration-view, .userprofile, .users-editpersonalinfo-view, .users-edituserprofile-view, .users-emailsnotification-view {
    box($white, $greyBorders, 0 0 3px 3px, 20px, solid, 1px);
    h1 {
        font-size: $l;
        border-bottom: 1px solid $greyBorders;
        padding-bottom: 5px;
        margin-bottom: 30px;
    }
    .icon-arrow-left {
        display: block;
        font-size: $xs;
        margin: 0 0 20px 0;
        &:before {
            color: $black;
            font-size: remify(8px);
            margin: 0 4px 3px 0;
        }
    }
}
.users-configuration-view, .users-userprofile-view {
    .user-image {
        background-color: $greyBoxBg;
        color: $white;
        display: inline-block;
        font-size: remify(50px);
        height: 90px;
        line-height: 75px;
        text-align: center;
        vertical-align: top;
        width: 90px;
    }
    .links {
        ul-reset();
        display: inline-block;
        margin: 0 0 0 15px;
        li {
            margin: 5px 0;
        }
    }
}
