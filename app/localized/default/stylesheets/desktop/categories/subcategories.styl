@import '../helpers/variables.styl';
@import '../helpers/mixins.styl';

#listing-filters {
	.category-selected {
		background: #666;
		color: #fff;
		position: relative;
		span {
			font-size: .7692rem;
			font-weight: normal;
		}
		&:after {
			left: 10px;
			bottom: -11px;
			arrow(#666 transparent transparent, 5px 6px 6px);
		}
	}
	.sub-categories {
		background: #fff;
		ul-reset();

		li {
			&:hover {
				box-shadow(0 0 0 1px #38b inset);
				a, .count {
					text-decoration: none;
					color: #666;
				}
			}
			.count {
				color: #888;
				font-size: .7692rem;
			}
		}
	}
}