.posting-item-information {
	box(#fff, #e4e4e4 , 3px, 8px 0, solid, 1px);
	margin: 0 0 10px 0;
}

.posting-view {
	fieldset {
		border: none;
		clear-fix();
		margin: 0;
		padding: 0;
	}
	.advice {
		color: $greyStrong;
		display: block;
		font-size: $xs;
		margin: 5px 0 0 0;
	}
	.posting-label {
		float: left;
		font-size: $s;
		padding: 10px 20px 0 0;
		text-align: right;
		width: 170px;
	}
	.text-field {
		display: block;
		width: 418px;
	}
	.title-module {
		border-bottom: 1px solid $greyBorders;
		font-size: $xl;
		margin-bottom: 15px;
		padding: 10px 0 20px 10px;
	}
	.wrapper {
		padding: 10px;
		&:hover {
			background: $yellowPosting;
		}
	}
	.wrapper-inner-inputs {
		clear-fix();
	}
	.wrapper-inputs {
		float: left;
		position: relative;
	}
}
