#item-content {
    box(#fff, #e4e4e4 , 3px, 0 20px);
    display: inline-block;
    tab-arrow(right, $white, #e4e4e4, 1px, 40px, 1);
    position: relative;
    width: 620px;

    &:after {
        margin-top: -185px;
    }
    &:before {
        margin-top: -186px;
    }
    > h1 {
        font-size: 2.7rem;
        padding-right: 40px
    }
    .item-info {
        color: grey(40%)
    }
}