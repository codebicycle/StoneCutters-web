#testimonials {
    clear-fix();

    .testimonials-box {
        box($greyBoxBg, none, 3px, 20px, none, 0);
        float: right;
        width: 444px;
        &:first-child {
            float: left;
        }
        img {
            float: left;
            border-radius: 43px;
        }
        .testimony-content {
            float: right;
            padding-top: 10px;
            width: 338px;
        }
        p {
            margin: 0;
        }
        p:first-child {
            font-weight: bold;
            margin-bottom: 10px;
        }
        .name {
            font-size: $l;
        }
        .testimony {
            font-style: italic;
            float: right;
        }
    }
}