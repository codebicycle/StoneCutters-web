section#itemPage {
	nav.breadcrumb span.arrow:before {
		color: #38b;
	}

	.itemInfo {
		width: 41.13rem;
		float: left;
		border: .0625rem solid #ccc;
    	border-radius: .1875rem;

    	.dateInfo {
    		padding: .3125rem 1.25rem .9375rem;
    		font-size: .75rem; 
    		color: #999;

    		span {
    			display: inline-block;

	    		&.status {
	    			padding: .125rem .375rem .125rem .5rem;
	    			position: relative;
	    			margin: 0 1.25rem 0 0;
	    			border: 1px solid #e9e9e9;
	    			font-weight: bold;

	    			&:before, &:after {
	    				border: medium solid transparent;
					    content: " ";
					    height: 0;
					    left: 100%;
					    pointer-events: none;
					    position: absolute;
					    top: 50%;
					    width: 0;
	    			}
	    			&:after {
	    				border-left-color: #fff;
					    border-width: .625rem;
					    margin-top: -.625rem;
	    			}
	    			&:before {
	    				border-left-color: #e0e0e0;
					    border-width: .6875rem;
					    margin-top: -.6875rem;
	    			}

	    		}
	    		&.icons {
	    			width: .9375rem;
	    			height: 1.125rem;
				    padding-right: .125rem;
				    line-height: .9375rem;
				    vertical-align: bottom;

				    &:before {
				    	font-size: 1.063rem;
				    }
				    &.time:before {
				    	content: "l";
				    }
				    &.map:before {
				    	content: "y";
				    }
	    		}
	    	}
    	}
	}
	#photos, #optionals, #description {
		width: 38.69rem;
		margin: 0 0 .5rem 1.25rem;
	}
	#photos {
		height: 25rem;
		overflow: hidden;

		.bigPhoto {
			width: 33.75rem;
			height: 25rem;
			float: left;
			position: relative;
			background-size: cover;
			background-repeat: no-repeat;
			cursor: pointer;

			&:hover span {
    				opacity: 1;
    			}

			span {
				width: 61px;
				height: 61px;
				left: 46%;
				top: 41%;
				position: absolute;
				background: url(imageUrl/images/desktop/zoom.png);
    			opacity: 0;
    			-webkit-transition: opacity 0.2s linear 0s;
				-moz-transition: opacity 0.2s linear 0s;
				transition: opacity 0.2s linear 0s;
    			z-index: 5000;
			}
		}
		ul {
			width: 3.75rem;
			height: 25rem;
			float: right;
			overflow: hidden;
			li {
				width: 3.75rem;
				height: 3.75rem;
				margin: 0 0 .5rem 0;
				background-size: cover;
				background-repeat: no-repeat;
				cursor: pointer;

				&:hover {
					border: 3px solid #2b8dd6;
				}
			}
		}
	}
	#optionals {
		border-bottom: 1px solid #eee;

		ul {
			font-size: .875rem;

			li {
				width: 50%; 
				float: left;
				margin: .5rem 0;
			}
		}
	}
	#description {
		p {
			font-size: .8125rem;
		}
	}
	#location {
		width: 19.13rem;
		min-height: 10.13rem;
		margin: 0 0 .5rem 1.25rem;
		border: 1px solid #eeeeee;

		h2 {
			
		}
	}
}