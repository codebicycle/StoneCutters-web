#breadcrumb {
    clear-fix();
    color: $black;
    font-size: $s;
    margin: 0 0 20px 0;

    .breadcrumb-navigation {
        float: left;
        padding: 6px 0;

        a,
        span,
        .count {
            display: inline-block;
            vertical-align: middle;
        }
        .count {
            color: $greyStrong;
        }
    }

    .breadcrumb-pagination {
        float: right;
        a {
            color: $greyStrong;
            display: inline-block;
            vertical-align: middle;
            &.disable {
                color: $greyBorders;
            }
            &[rel="prev"] {
                box($white, $greyBorders, 3px 0 0 3px, 6px, solid, 1px 0 1px 1px);
            }
            &[rel="next"] {
                box($white, $greyBorders, 0 3px 3px 0, 6px, solid, 1px);
            }
        }
        p {
            display: inline-block;
            margin: 0;
            vertical-align: middle;
        }
    }

    [class*=icon-arrow]::before {
        font-size: remify(8px);
        margin: 0 4px;
    }
}
