.page-standart {
	box(#fff, $greyBorders , 3px, 20px 20px, solid, 1px);
	font-size: $s;

	h1,
	h3,
	ol,
	p {
		margin: 0;
	}
	p {
		line-height: 20px;
	}
	h1 {
		font-size: $l;
		border-bottom: 1px solid $greyBorders;
		padding-bottom: 5px;
		margin-bottom: 30px;
		font-weight: normal;
	}
	ol,
	ul {
		ul-reset();
	}
	ul {
		margin: 10px 0;
		li {
			margin: 20px 0;
		}
	}
	ol{

		& > li {
			padding-bottom: 10px;
		}

		h3 {
			padding-bottom: 10px;
		}
		p {
			padding-bottom: 20px;
		}

		ul {
			padding-left: 30px;

			li {
				padding: 5px;
			}
		}
	}

	h3 {
		font-size: $s;
		font-weight: bold;
	}
}
