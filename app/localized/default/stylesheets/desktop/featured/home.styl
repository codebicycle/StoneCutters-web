.featuredad-home {
    .featuredad-content {
        li, .items-image {
            width: 141px;
        }
    }
}
.featuredad-home, .users-userprofile-view .user-ads {
    margin-bottom: 18px;

    h3 {
        font-weight: normal;
        font-size: $l;
        margin-bottom: 8px;
    }
    .featuredad-content {
        ul-reset();
        clear-fix();

        li {
            float: left;
            height: 168px;
            padding: 10px;
            position: relative;
            border: 1px solid $greyPageBg;

            .icon-star-circle {
                color: $featureStarBg;
                font-size: 22px;
                position: absolute;
                z-index: 10;
                top: 2px;
                left: 2px;
                &:before {
                    border:2px solid $white;
                    border-radius(50%);
                    background: $white;
                }
            }
            &:hover {
                background: $white;
                box-shadow(0 0 2px 2px rgba(0, 0, 0, .1));
                border: 1px solid $greyBorders;
                z-index: 100;
            }

            a {
                &:hover {
                    text-decoration: none;
                }

                h3 {
                    font-size: $xs;
                    font-weight: normal;
                    margin: 8px 0 0;
                }

                .items-price {
                    color: $black;
                    font-weight: bold;
                    height: 20px;
                    margin: 5px 0;
                }

                .items-image {
                    background-color: $white;
                    border: 1px solid $greyBorders;
                    display: block;
                    height: 110px;
                    line-height: 95px;
                    margin: 0;
                    position: relative;
                    text-align: center;
                    vertical-align: top;
                    img {
                        bottom: 0;
                        left: 0;
                        margin: auto;
                        max-height: 100%;
                        max-width: 100%;
                        position: absolute;
                        right: 0;
                        top: 0;
                    }
                    &.icon-photo {
                        color: $greyBorders;
                        font-size: remify(64px);
                    }
                }
            }
        }
    }
}
