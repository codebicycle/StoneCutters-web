#itemPage {
	padding: 16px;
	position: relative;
	color: #333333;
}
#itemPage h1 {
	font-size: 16px;
}
#itemPage input.favorite {
	width: 32px;
	height: 32px;
	position: absolute;
	right: 16px;
	top: 16px;
	border: none;
	text-indent: -9000px;
	cursor: pointer;
}
#itemPage input.favorite.favoriteOn {
	background: url(imageUrl/images/html4/favoriteOn.png) no-repeat;
}
#itemPage input.favorite.favoriteOff {
	background: url(imageUrl/images/html4/favoriteOff.png) no-repeat;
}
#itemPage h2 {
	padding: 5px 0 0 0;
	color: #fd7600;
	font-size: 16px;
}
#itemPage > span {
	font-size: 11px;
	padding: 3px 0;
}
#itemPage #itemPhotos {
	margin: 16px 0 0 0;
}
#itemPage #itemPhotos span {
	display: block;
	text-align: left;
}
#itemPage #itemPhotos, #itemPage #itemPhotos a {
	position: relative;
	text-align: center;
}
#itemPage #itemPhotos a .arrow {
	width: 33px;
	height: 33px;
	position: absolute;
	bottom: 10px;
	right: 10px;
	background: url(imageUrl/images/html4/galeryArrow.png) no-repeat;
}
#itemPage #itemPhotos a img {
	width: 100%;
	max-width: 300px;
}
#itemPage #itemPhotos #galeryPagination {
	width: 150px;
	height: 40px;
	margin: 20px auto 0;
}
#itemPage #itemPhotos #galeryPagination a.arrow {
	width: 40px;
	height: 40px;
	float: left;
}
#itemPage #itemPhotos #galeryPagination a.arrow.leftA {
	background: url(imageUrl/images/html4/leftA.png) no-repeat;   
}
#itemPage #itemPhotos #galeryPagination a.arrow.leftD {
	background: url(imageUrl/images/html4/leftD.png) no-repeat;   
}
#itemPage #itemPhotos #galeryPagination a.arrow.rightA {
	background: url(imageUrl/images/html4/rightA.png) no-repeat;   
}
#itemPage #itemPhotos #galeryPagination a.arrow.rightD {
	background: url(imageUrl/images/html4/rightD.png) no-repeat;   
}
#itemPage #itemPhotos #galeryPagination .center {
	width: 66px;
	height: 30px;
	float: left;
	margin: 10px 0 0 0;
	text-align: center;
}
#itemPage h3 {
	padding: 6px;
	margin: 12px 0;
	background: #e0f4ff;
	font-size: 12px;
}
#itemPage #centerBtns {
	width: 100%;
	height: auto;
	margin: 10px 0;
	text-align: center;
}
#itemPage #centerBtns a {
	padding: 5px 7px;
	font-size: 13px;
}
#itemPage #phone {
	margin: 30px 0 0 0;
	font-size: 18px;
	text-align: center;
}
#itemPage #phone img {
	padding: 0 7px 0 0;
}
#itemPage #phone span {
	position: relative;
	top: -5px;
}
#itemPage p {
	word-wrap: break-word;
	overflow: hidden;
	font-size: 13px;
}
#itemPage ul {
	font-size: 13px;
	text-transform: capitalize;
}
#itemPage ul li a {
	color: #175db4;
}
#itemPage #itemDisable {
	padding: 14px 0;
	color: #f90b09;
	font-size: 15px;
	font-weight: bold;
}