.pages-help-view {
    clear-fix();
    .help-navigation {
        box($lightBlue, $lightBlueBorder , 3px, 0, solid, 1px);
        float: left;
        width: 294px;
        h3 {
            font-size: $l;
            font-weight: normal;
            margin: 0;
            padding: 13px 0 13px 20px;
            text-transform: capitalize;
        }
        ul {
            ul-reset();
            li {
                border-top: 1px solid $lightBlueBorder;
            }
        }

        .icons{
            padding-right: 4px;
            &:before {
                font-size: $l;
            }
        }

        .selected {
            position: relative;
            background: $white;
            border-right: 1px solid $lightBlueBorder;

            a,
            .icons:before {
                color: $greyStrong;
            }
        }
        .selected:after, .selected:before {
            left: 100%;
            top: 50%;
            border: solid transparent;
            content: " ";
            height: 0;
            width: 0;
            position: absolute;
        }
        .selected:after {
            border-color: rgba(255, 255, 255, 0);
            border-left-color: $white;
            border-width: 26px;
            margin-top: -26px;
        }
        .selected:before {
            border-color: rgba(185, 221, 243, 0);
            border-left-color: $lightBlueBorder;
            border-width: 27px;
            margin-top: -27px;
        }

    }

    .help-content {
        box($white, $greyBorders , 3px, 0, solid, 1px);
        float: right;
        width: 656px;

        h3 {
            font-size: $l;
            font-weight: normal;
            padding: 13px 0 13px 20px;
            margin: 0;
            border-bottom: 1px solid $greyBorders;
        }

        .icon-arrowright:before {
            color: $greyStrong;
        }

        .question {
            border-bottom: 1px dotted $greyBorders;
            &:last-child {
                border-bottom: none;
            }

            h4 {
                cursor: pointer;
                font-weight: normal;
                margin: 0;
                padding: 20px;
            }

            p {
                line-height: remify(18px);
                margin: 0;
            }
        }

        .faq-open {
            background: $greyBoxBg;

            h4 {
                font-weight: bold;
            }
            .icon-arrowright:before {
                color: $black;
            }
        }

        .question-content {
            padding: 0 0 14px 20px;

            ul {
                ul-reset();
            }
            li {
                line-height: remify(18px);
            }
        }
    }

    .help-toggle-content {
        display: block;
        padding: 15px 0 15px 18px;
    }
}


