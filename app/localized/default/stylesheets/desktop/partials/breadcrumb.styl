#breadcrumb, #listing-breadcrumb {
    clear-fix();
    color: $black;
    font-size: $xs;
    margin: 0 0 20px 0;

    .breadcrumb-navigation {
        float: left;
        padding: 0 0 6px;

        a,
        span,
        .count {
            display: inline-block;
            vertical-align: middle;
        }
        a {
            font-size: $xs;
            &::before {
                vertical-align: baseline;
                line-height: initial;
            }
        }
        .count {
            color: $greyStrong;
        }
        [class*=icon-arrow]::before {
            font-size: remify(8px);
            margin: 0 4px;
        }
    }
    .back-to-results {
        a {
            font-size: $xs;
        }
    }
    .breadcrumb-pagination {
        float: right;
        a {
            color: $greyStrong;
            display: inline-block;
            vertical-align: middle;
            &.disable {
                color: $greyBorders;
            }
            &:hover {
                color: $black;
            }
            &[rel="prev"] {
                box($white, $greyBorders, 3px 0 0 3px, 6px, solid, 1px 0 1px 1px);
            }
            &[rel="next"] {
                box($white, $greyBorders, 0 3px 3px 0, 6px, solid, 1px);
                &.icon-arrow-right:before {
                    margin-top: -3px;
                }
            }
        }
        p {
            display: inline-block;
            margin: 0;
            vertical-align: middle;
        }
    }

}
