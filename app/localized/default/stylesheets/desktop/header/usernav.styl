.header-usernav-view {
	padding: 10px 0;
	clear-fix();

	ul {
		float: right;
		ul-reset();
		li {
			border-left: 1px solid #ccc;
			display: inline-block;
			vertical-align: middle;
			font-size: $xs;

			&:first-child {
				border-left: none;
			}
			&:last-child a {
				padding-right: 0;
			}
			a {
				padding: 0 5px;
			}
			.count {
				background-color: $red;
				border-radius: 25px;
				color: $white;
				display: inline-block;
				height: 15px;
				text-align: center;
				padding: 0 4px;
				font-weight: bold;
			}
		}
	}
}
