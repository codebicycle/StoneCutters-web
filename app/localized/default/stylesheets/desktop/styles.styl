@import 'font/font.css'

* {
    margin: 0;
    padding: 0;
}
*, *:before, *:after {
    box-sizing: border-box;
}
body, html {
    font-family: arial,helvetica,sans-serif;
    font-size: 16px;
}
a {
    text-decoration: none;
    outline: none;
}
ul, li {
    list-style: none;
}
.visible {
    display: block!important;
}
.hide {
	display: none!important;
}
#wrapper {
	width: 100%;
	margin: 0;
    text-align: left;
}
.btn {
	display: inline-block;
	cursor: pointer;
	background-image: -moz-linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0));
	background-image: -o-linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0)); 
	background-image: -webkit-linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0)); 
	background-image: linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0));
	box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
	border-radius: 3px;
	border: 1px solid rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
	text-align: center;
}
.btn.orange {
	background-color: #f70;
}

.clear {
	clear: both;
}
.fRight {
	float: right;
}

/*----Progres Bar----*/
#progressBar {
    position: fixed;
    z-index: 999999;
    top: 0;
    left: 0;
    width: 0%;
    height: 2px;
    background: #FF7700;
    border-radius: 10%;
    -moz-transition: width 500ms ease-out,opacity 400ms linear;
    -ms-transition: width 500ms ease-out,opacity 400ms linear;
    -o-transition: width 500ms ease-out,opacity 400ms linear;
    -webkit-transition: width 500ms ease-out,opacity 400ms linear;
    transition: width 500ms ease-out,opacity 400ms linear;
}
#progressBar:before {
    position: absolute;
    content: '';
    top: 0;
    opacity: 1;
    width: 10%;
    right: 0px;
    height: 2px;
    box-shadow: #BD5901 1px 0 6px 2px;
    border-radius: 50%;
}

section {
	position: relative;

    nav.breadcrumb {
        width: 100%;
        float: left;
        margin: .5rem 0;
        font-size: .8125rem;
        color: #000;

        a {
            color: #38b;
        }

        span.arrow {

            &:before {
                color: #ccc;
                content: "[";
                display: inline-block;
                font-family: 'olx-icon-font';
                line-height: 1;
                vertical-align: middle;
            }
            &.fRight:before {
                content: "ÓÄÅ";
            }
        }

        .itemPagination {
            float: right;
            margin: -.75rem 0 0;

            p {
                margin: 0 .3125rem 0 0;
                display: inline-block;
                color: #333;
                font-size: .875rem;
                line-height: 1.875rem;
            }
            span {
                height: 1.875rem;
                display: inline-block;
                font-size: 1rem;
                color: #ccc;
                line-height: 1.75;
            }
            a {
                width: 1.875rem;
                height: 1.875rem;
                font-size: 1.438rem;
                line-height: 1.3;
                text-align: center;
                &.left:after {
                    content: "{";
                }
                &.right:after {
                    content: "[";                    
                }
            }
        }
    }

	&#template {
		width: 61.25rem;
		margin: 0 auto 1.25rem;

	}
}




/*----Icons----*/
.icons:before, .icons:after {
	display: inline-block;
    font-family: 'olx-icon-font';
    vertical-align: middle;
    font-weight: normal;
}
