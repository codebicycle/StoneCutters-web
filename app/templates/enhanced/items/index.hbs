{{{partial "enhanced/partials/header"}}}
<h1>Items for category {{params.categoryId}}</h1>

<div class="row">
{{#each models.0.data}}
	{{#moduloIf @index 3}}
		</div>
		<div class="row">
	{{/moduloIf}}
	<div class="span4" style="height: 180px;text-align:center;margin-bottom:2em;border:2px solid;border-radius:10px;">
		<a href="/items/{{id}}">
	
	{{#if thumbnail }}
			<img src="{{thumbnail}}" style="height: 176px;">
	{{else}}
			<div style="line-height:180px; height: 180px">{{title}} - {{price.displayPrice}}</div>
	{{/if}}
	
		</a>
	</div>
{{/each}}
</div>
{{{partial "enhanced/partials/footer"}}}