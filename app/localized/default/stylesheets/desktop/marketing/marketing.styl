@import '../helpers/variables.styl';
@import '../helpers/mixins.styl';

.banner-video {
    cursor: pointer;
    box(#fff, #e4e4e4, 3px, 0 0 16px 0);

    &:hover {
        background: #e4e4e4;
    }

    img {
        margin-bottom: 18px;
    }
    
    .title {
        color: #000;
        font-size: 1.385rem;
        font-weight: bold;
        text-align: center;
        margin: 0 0 8px 0;
    }

    .subtitle {
        margin: 0;
        color: #38b;
        font-weight: bold;
        text-align: center;
    }
}