.banner-video {
    cursor: pointer;
    box($white, $greyBorders, 3px, 0 0 16px 0);

    &:hover {
        background: $greyBorders;
    }

    img {
        margin-bottom: 18px;
    }

    .title {
        color: $black;
        font-size: $s;
        font-weight: bold;
        text-align: center;
        margin: 0 0 8px 0;
    }

    .subtitle {
        margin: 0;
        color: $blue;
        font-weight: bold;
        text-align: center;
    }
}
