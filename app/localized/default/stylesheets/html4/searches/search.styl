.breadcrumb .searchResultsCount {
	width: 70px;
	height: 32px;
	position: absolute;
	right: 0;
	top: 0;
	text-align: center;
	color: #fff;
	background: #666666;
}
.breadcrumb .searchResultsCount span {
	width: 70px;
	position: absolute;
	left: 0;
}
.breadcrumb .searchResultsCount span.searchResultsNumber {
	top: 2px;
	font-weight: bold;
	font-size: 11.5px;

}
.breadcrumb .searchResultsCount span.searchResultsText {
	bottom: 1px;
	font-size: 10.2px;
}