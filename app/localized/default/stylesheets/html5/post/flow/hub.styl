#hub {
    counter-reset: index;
}

#hub #image {
    background-color: #DDD;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
}

#hub #image > div {
    width: 100%;
    height: 100%;
    background-image: url(imageUrl/images/html5/cameraBig.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 45%;
    text-align: center;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

#hub #image.fill > div {
    opacity: 0;
}

#hub #image > div > span {
    display: inline-block;
    text-align: center;
    vertical-align: middle;
    color: #A3B606;
    margin: 37.5% 0 12.5% 0;
    font-size: 5vw;
}

#posting-flow .image-label {
    float: left;
    width: 100%;
    height: 1.5rem;
    padding: 0 1rem;
    background-color: #5C2A81;
    color: #FFF;
    line-height: 1.5rem;
    text-align: center;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

#posting-flow .image-label > small {
    overflow: hidden;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: .75rem;
}

#hub #steps {
    float: left;
    width: 100%;
    background: white;
}

#hub .step {
    padding: 1rem;
    line-height: 1.25rem;
    border-top: solid thin #CCC;
    min-height: 3em;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    float: left;
    width: 100%;
}

#hub .step .title {
    font-weight: normal;
    color: #494949;
    float: left;
    font-size: 1em;
}

#hub .step.error .title {
    color: #999;
}

#hub .step:after {
    counter-increment: index;
    content: counter(index);
    float: right;
    display: block;
    width: 1.6rem;
    height: 1.6rem;
    font-size: 1rem;
    line-height: 1.6rem;
    color: #FFF;
    text-align: center;
    background-color: #555;
    border-radius: 100%;
}

#hub .step.success:after {
    background-color: #a7b52c;
}

#hub .step.error:after {
    background-color: #d38811;
    content: "!";
}

#hub #post {
    padding: 1rem;
    text-align: center;
    color: #FFF;
    background-color: #F60;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    float: left;
    width: 100%;
}

#hub #post.opaque {
    background: #FDC99E;
}
