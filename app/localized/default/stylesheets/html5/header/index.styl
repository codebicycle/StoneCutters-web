header#topBar {
	height: 50px;
	padding: 0 .625rem;
	position: relative;
	background: #4275BA;
}
header#topBar.disabled {
	display: none;
}
header#topBar > a{
	width: 70px;
	height: 50px;
	float: left;
	display: block;
	background: url(imageUrl/images/html5/logoMenu.png);
	text-indent: -9000px;
	z-index: 10;
}
header#topBar > ul {
	width: auto;
	height: auto;
	position: absolute;
	right: .5rem;
	top: .4rem;
	z-index: 1;
}
header#topBar > ul > li {
	width: auto;
	float: left;
	margin: 0 0 0 .8rem;
	display: inline-block;
}
header#topBar > ul > li > span, header#topBar > ul > li > a{
	height: 1.2rem;
	display: inline-block;
	padding: 0.45rem 0.75rem;
	font-size: 1rem;
	font-weight: bold;
	line-height: 1.4;
}
header#topBar > ul > li.logOut a, header#topBar > ul > li.logIn span, header#topBar > ul > li.logInMsg span {
	width: 10px;
}
header#topBar > ul > li.logOut a {
	background-image: url(imageUrl/images/html5/userLogOut.png);
}
header#topBar > ul > li.logIn span {
	background-image: url(imageUrl/images/html5/userLogIn.png);
	&.active {
		background-color: #345c93;
	}
}
header#topBar > ul > li.logInMsg span {
	background-image: url(imageUrl/images/html5/userLogInMsg.png);
}
header#topBar .disabled {
	display: none;
}
header#topBar > ul > li.postBtn a{
	text-transform: uppercase;
}
header#topBar .topBarFilters {
	background: #4275ba;
	padding: .4rem 0;
	color: #fff;
	&.hide{
		display: none;
	}
	a {
		width: 25%;
		color: #fff;
		background: #25a0df;
		display: inline-block;
		text-align: center;
		font-weight: bold;
		font-size: .750rem;
		box-sizing: border-box;
		padding: .625rem;
		border-radius: 3px;
		box-shadow: 0 .5px 1px RGBA(0,0,0,0.5);
	}

	.title {
		width: 75%;
		text-align: center;
		display: inline-block;
		vertical-align: middle;
		font-size: 1rem;
	}
}
