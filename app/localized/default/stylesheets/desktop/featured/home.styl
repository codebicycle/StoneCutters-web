.featuredad-home {
    margin-bottom: 18px;

    h3 {
        font-weight: normal;
        font-size: $l;
        margin-bottom: 8px;
    }
    .featuredad-content {
        ul-reset();
        clear-fix();

        li {
            float: left;
            width: 141px;
            height: 168px;
            padding: 10px;
            position: relative;
            border: 1px solid $greyPageBg;

            .icon-feature {
                green-star();
                visibility: hidden;
                position: absolute;
                margin-left: -7px;
                top: 16px;
            }
            &:hover {
                .icon-feature {
                    visibility: visible;
                }

                background: $white;
                box-shadow(0 0 2px 2px rgba(0, 0, 0, .1));
                border: 1px solid $greyBorders;
                z-index: 100;
            }

            a {
                &:hover {
                    text-decoration: none;
                }

                h3 {
                    font-size: $xs;
                    font-weight: normal;
                    margin: 8px 0 0;
                }

                .items-price {
                    color: $black;
                    font-weight: bold;
                    height: 20px;
                    margin: 5px 0;
                }

                .items-image {
                    display: block;
                    vertical-align: top;
                    margin: 0;
                    border: 1px solid $greyBorders;
                    width: 141px;
                    height: 110px;
                    position: relative;
                    img {
                        bottom: 0;
                        left: 0;
                        margin: auto;
                        max-height: 100%;
                        max-width: 100%;
                        position: absolute;
                        right: 0;
                        top: 0;
                    }
                }
            }
        }
    }
}