header#header {
	width: 100%;
    position: relative;
    margin: 0 auto 1.25rem;
	background-color: #fafafa;
    border-bottom: 1px solid #ebebeb;

    h1, section#headerSession, section#headerSearch {
    	background-color: #fafafa;
    }

    h1 {
    	width: 100%;
    	height: 1.5rem;
	    overflow: hidden;
	    padding: .25rem 0;
	    color: #bfbfbf;
	    text-align: center;
	    font-size: .6875rem;
    }

	section#headerSession {
		width: 61.25rem;
		margin: 0 auto;
		text-align: right;
		font-size: .8125rem;

		ul{
			height: 1.4rem;

			li {
				display: inline-block;
				margin: 0.3rem 0 0;
				padding: 0 .4375rem;
				border-right: 1px solid #aaa;
				color: #666;

				&:last-child {
					padding-right: 0;
					border-right: none;
				}

				a {
					color: #38b;
				}
			}
		}
	}

	section#headerSearch {
		width: 61.25rem;
		height: 5.25rem;
		margin: 0 auto;

		.logo {
			width: 82px;
			height: 82px;
			float: left;
			margin: -.8rem 0 0;
			background: url(imageUrl/images/desktop/logo82.png);
		}
		#search {
			float: left;
			margin: .9375rem 0 0 .5rem;
			
			input, button {
				height: 2rem;
				float: left;
			}

			input[name="search"] {
				width: 12.5rem;
				
				padding: 3px 5px;
				border-radius: 3px 0 0 3px;
				border: 1px solid #ccc;
				font-size: .8125rem;
			}
			button {
				width: 2.75rem;
				padding: 0 5px;
				background-color: #e0e0e0;
				background-image: -moz-linear-gradient(center top , rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0));
				background-size: 100% auto;
				border: 1px solid #ccc;
				border-left: none;
				border-radius: 0 3px 3px 0;
				font-size: 1.438rem;
				position: relative;
				cursor: pointer;

			    span {
			    	color: #666;
    				float: left;
    				margin: -2px 0 0;
    				font-weight: bold;

			    	&:before {
			    		content: "ÓÅí";
			    	}
			    }
			}
			
		}
		.post {
			width: 22rem;
			height: 3.125rem;
			float: right;
			margin: .5rem 0 0 0;
			font-size: 1.313rem;
			color: #fff;
			line-height: 3.125rem;

			&:before {
				background-image: url("data:image/png;base64,");
			    background-position: 40px 70px;
			    box-shadow: 0 2px 0 0 #fafafa;
			    content: "";
			    float: right;
			    height: 50px;
			    margin: 0;
			    top: 0;
			    width: 20px;
			}
		}
	}
}