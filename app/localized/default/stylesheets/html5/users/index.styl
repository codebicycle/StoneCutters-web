.users_login_view,
.users_lostpassword_view,
.users_register_view {
    padding: 10px;
    overflow: hidden;

    #errors {
        margin-bottom: 10px;
        &.success {
            border-color: #b9ddf3;
            background: #e8f6ff;
        }
    }

    form {
        label {
            font-size: .875rem;
            font-weight: bold;
            margin-bottom: 3px;
            color: #303030;
            &.top {
                margin-top: 20px;
            }
            &.terms {
                input[type="checkbox"] {
                    position: relative;
                    top: 2px;
                }
            }
        }
        small {
            float: right;
            margin-top: 5px;
            a {
                color: #494949;
            }
        }
        input[type="password"],
        input[type="text"] {
            border-radius: 3px;
            border: 1px solid #d6d6d6;
            box-sizing: border-box;
            height: 40px;
            margin: 0;
        }
        .content-btns {
            clear: both;
            font-size: 0.875rem;
            margin-top: 80px;
            .back,
            .accept {
                font-size: .8125rem;
                border-radius: 3px;
                border: 1px solid;
                box-sizing: border-box;
                font-weight: bold;
                height: 40px;
                line-height: 40px;
                text-align: center;
                text-decoration: none;
                width: 49%;
            }
            .back {
                background: #f5f5f5;
                border-color: #e3e3e3;
                float: left;
                color: #303030;
            }
            .accept {
                background: #aab22a;
                border-color: #919b00;
                color: #fff;
                float: right;
            }
        }
    }
    .msg-resulted {
        display: none;
        left: 5%;
        position: fixed;
        right: 5%;
        top: 25%;
        width: 90%;
        z-index: 9;
        &.visible {
            display: block;
        }
        .msg-container {
            span {
                color: #fff;
                display: block;
                padding: 20px 0;
                position: relative;
                text-align: center;
                z-index: 10;
            }
            .msg-bg {
                background: #000;
                border-radius: 5px;
                display: block;
                height: 100%;
                left: 0;
                opacity: .90;
                position: absolute;
                top: 0;
                width: 100%;
            }
        }
    }
}
.users_lostpassword_view {
    .hint {
        font-size: .75rem;
        margin-bottom: 10px;
    }

    form {
        .content-btns {
            margin-top: 20px;
            text-align: center;
            .accept {
                float: none;
                width: 40%;
            }
        }
    }
}
.users-unsubscribe,
.users-report {
    #notification-message {
        padding: 40px 10px;
        text-align: center;
        color: #333;
    }
}