.notification-keep-posting {
    box($yellow, $yellowBorders, 3px, 30px, solid, 1px);
    clear-fix();
    margin-bottom: 20px;

    .categories-best-selling,
    .posting {
        clear: both;
        min-width: 180px;
    }
    .highlight {
        color: $orange;
        font-weight: bold;
    }
    .icon-arrow::before {
        color: $orange;
        font-size: $l;
        left: -35px;
        position: absolute;
        top: 27%;
    }
    .message,
    .title {
        display: inline-block;
        vertical-align: middle;
        margin: 0;
    }
    .message {
        font-size: $m;
        position: relative;
        max-width: 50%;
    }
    .title {
        font-size: remify(38px);
        font-weight: normal;
        margin-right: 45px;
        max-width: 45%;
    }
}
