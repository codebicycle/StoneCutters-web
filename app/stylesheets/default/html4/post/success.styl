#success {
	display: block;
	padding: 6px;
	background: #EBEBEB; 
}
#success > div {
	display: block;
	padding: 13px;
	background: #fff;
	box-shadow: 1px 1px 1px 0 #cccccc;
}
#success > div p {
	display: block;
	margin: 6px 0 0 0;
	font-size: 12px;
	color: #494949;
}
#success > div p a {
	color: #4275BA;
}
#success > div .btns {
	width: 100%;
	padding: 9px 0;
	margin: 9px 0;
	display: block;
	text-align: center;
	font-weight: normal;
	border-radius: 0;
	border: none;
}
#success > div > a.back {
	width: 100%;
	display: block;
	margin: 10px 0 0 0;
	color: #474747;
	text-align: center;
	font-size: 13px;
}