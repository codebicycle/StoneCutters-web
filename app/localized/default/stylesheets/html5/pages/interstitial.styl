#interstitial {
	width: 100%;
	position: absolute;
	background: #1b87c4;
	text-align: center;
	font-size: 1rem;

	header {
		width: 100%;
		display: block;
		margin: 1rem auto 0;

		img {
			width: 66px;
			display: inline-block;
			vertical-align: top;
		}
		h1 {
			width: 11rem;
			display: inline-block;
			margin: .2rem 0 0 1rem;
			font-size: 1.8rem;
			font-weight: normal;
			text-align: left;
			font-family: "arialRounded", Arial, sans-serif;
			color: #fff;
			line-height: 1.8rem;
		}
	}
	.download {
		margin: 2rem 0;

		a {
			padding: .6rem 1.5rem;
			font-weight: bold;
			-webkit-box-shadow: 0px 4px 1px -3px rgba(0,0,0,0.7);
			-moz-box-shadow: 0px 4px 1px -3px rgba(0,0,0,0.7);
			box-shadow: 0px 4px 1px -3px rgba(0,0,0,0.7);
		}
	}
	.continue {
		width: 100%;
		text-align: center;
		margin: 1.5rem 0;
		font-size: .7rem;

		 a {
			color: #fff;
			text-decoration: underline;
		}
	}
	#mobileImg {
		width: 70%;
		max-width: 272px;
		margin: 0 auto;
	}
}