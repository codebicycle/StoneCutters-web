header#location {

	padding: 0.4rem 0.8rem 0.5rem 0.5rem;
	background: #EFEFEF;
	border-bottom:1px solid #BCBCBC;
	border-top:1px solid #BCBCBC;
	h1,
	h3,
	strong {

		width: 60%;
		display: inline-block;
		font-size: 1.063rem;
		color: #333;
		font-weight: normal;
		float: right;
		text-align: right;
		a {
			background: url(imageUrl/images/html5/flecha_home.png) right center no-repeat;
			color: #008dcb;
		    font-size: 0.85rem;
		    font-weight: bold;
		    padding: 0 0.6rem;
			&.big {

				font-size: 1.063rem;

			}

		}

		small {

			font-size: 0.6875rem;

		}

	}
	.locationtext {
		background: url(imageUrl/images/html5/icon_location.png) left center no-repeat;
		color: #494949;
		font-size: .95rem;
		padding: 0 1.2rem;
	}

}
