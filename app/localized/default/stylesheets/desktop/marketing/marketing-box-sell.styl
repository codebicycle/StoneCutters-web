.marketing-box-sell {
    float: right;
    padding-top: 19px;
    width: 356px;
    height: 360px;
    position: relative;
    p {
        font-size: $xl;
        margin: 0;
        text-align: center;
    }
    .subtitle {
        font-size: $l;
        line-height: 1;
        padding: 6px 0 10px;
        strong {
            background: url(imageUrl/images/desktop/underline.gif) center bottom no-repeat;
            display: inline-block;
            margin-bottom: 20px;
            padding-bottom: 8px;
        }
    }
    .stuff {
        background: url(imageUrl/images/desktop/stuff.png) no-repeat center;
        display: block;
        height: 131px;
        left: 0;
        position: absolute;
        width: 100%;
        z-index: 100;
    }
    .description {
        clear-fix();
        background: #f5f5f5;
        position: absolute;
        bottom: 0;
        .icons {
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            color: $greyStrong;
            float: left;
            width: 33%;
            text-align: center;
            &::before {
                font-size: $xl;
            }
            span {
                display: block;
            }
            p {
                font-size: $xs;
                padding-top: 10px;
            }
        }
    }

    &.language-en, &.language-es {
        .stuff {
            top: 120px;
        }
        .description {
            padding: 75px 0 20px;
        }
    }
    &.language-en {
        .description {
            .icons {
                padding: 0 9px;
            }
        }
    }
    &.language-es {
        .description {
            .icons {
                padding: 0 16px;
            }
        }
    }
    &.language-fr {
        .stuff {
            top: 125px;
        }
    }
    &.language-it {
        .stuff {
            top: 115px;
        }
    }
    &.language-fr, &.language-it {
        .description {
            padding: 80px 0 15px;
            .icons.icon-time {
                padding: 0 10px;
            }
            .icons.icon-envelope {
                padding: 0 18px;
            }
            .icons.icon-chat {
                padding: 0;
            }
        }
        p.title {
            padding: 0 15px;
        }
    }
}

.marketing-box-sell-za {
    padding-top: 0;
    position: relative;
    float: left;
    .stuff {
        background: url(imageUrl/images/desktop/marketing/home-banner/marketing-box-image-za.png) no-repeat center;
        height: 190px;
    }
    .google-play-en, .google-play-af {
        position: absolute;
        bottom: -6px;
        right: 41px;
    }
    .app-store-en, .app-store-af{
       position: absolute;
       bottom: -6px;
       left: 90px;
    }
    .apps-buttons {
        padding-top: 205px;
        text-align: center;
        .appStores {
            width: 230px;
            margin: 0 auto;

            .icon-sketchyarrow {
                &::before {
                    transform: inherit;
                }
            }
        }
        span {
            &.icon-sketchyarrow {
                    &:before {
                    -moz-transform: scale(-1, 1);
                    -webkit-transform: scale(-1, 1);
                    -o-transform: scale(-1, 1);
                    -ms-transform: scale(-1, 1);
                    transform: scale(-1, 1);
                    color: #628;
                }
            }
        }
    }
}

.marketing-box-sell-ar {
    .image {
        margin-top: 11px;
    }
}
