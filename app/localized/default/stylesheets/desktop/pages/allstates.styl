.pages-allstates-view {
    box();

    ul {
        ul-reset();
    }

    .state-name, .city-name, .state-all-link {
        display: inline-block;
        line-height: 1.3;
        margin: 0;
    }

    .state-name {
        font-size: $m;
        font-weight: bold;
    }

    .counter {
        display: inline-block;
        font-size: $xs;
        padding-left: 3px;
    }

    .cities {
        border-top: 1px solid $greyBorders;
        column-count: 4;
        column-gap();
        margin: 5px 0;
        padding: 5px 0 15px;
    }

    .state-all-link, .city-name {
        font-size: $xs;
        font-weight: normal;
    }
}