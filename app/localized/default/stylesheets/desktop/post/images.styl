.posting-images-view {
    position: relative;

    .hint {
        margin-top: -5px;
    }

    .field-controls {
        width: auto;
    }

    .image-input-file {
          height: 0;
          left: -99999px;
          opacity: 0;
          position: absolute;
          top: -99999px;
          width: 0;
    }

    .file-upload {
        ul-reset();
        max-width: 440px;

        .image-cont {
            border: 1px dashed $blue;
            display: inline-block;
            height: 74px;
            line-height: 75px;
            margin: 0 0 10px 10px;
            opacity: .6;
            position: relative;
            text-align: center;
            vertical-align: top;
            width: 76px;

            .overlay-image {
                width: 100%;
                height: 100%;
                background: $white;
                opacity: 0.6;
                display: none;
            }

            &::after {
                background-color: $blue;
                bottom: 0;
                content: '';
                display: block;
                height: .5rem;
                left: 0;
                position: absolute;
                width: 0;
            }

            &:hover, &:focus {
                cursor: pointer;
                opacity: 1;
            }

            &.loaded {
                opacity: 1;

                &::after {
                    opacity: 0;
                    transition(250ms);
                    width: 100%;
                }

                .icon-close {
                    btn-close($black, $red);
                    display: none;
                    font-size: remify(17px);
                    line-height: remify(17px);
                    top: 8px;
                    right: 6px;
                    transition(250ms);
                }

                &:hover .overlay-image, &:hover .icon-close {
                    display: block;
                }
            }

            &.loading {
                &::after {
                    transition(250ms);
                    width: 66%;
                }
            }

            .icon-close {
                display: none;
            }

            .image {
                background: $lightBlue;
                bottom: 0;
                left: 0;
                position: absolute;
                right: 0;
                top: 0;

                &.fill {
                    background-size: cover;
                }

                &.icon-addpicture::before {
                    color: $blue;
                    font-size: $xxl;
                }
            }

            &.first-img {
                float: left;
                height: 160px;
                line-height: 160px;
                margin: 0;
                width: 165px;
                .icon-addpicture::before {
                    font-size: 75px;
                }
            }
        }
    }
}
