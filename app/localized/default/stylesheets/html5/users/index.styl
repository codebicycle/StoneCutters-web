.users_login_view,
.users_lostpassword_view,
.users_register_view {
	padding: 10px;
	overflow: hidden;

	#errors {
		margin-bottom: 10px;
	}

	form {
		label {
			font-size: 0.875rem;
			font-weight: bold;
			margin-bottom: 3px;
			color: #303030;
			&.top {
				margin-top: 20px;
			}
		}
		small {
			float: right;
			margin-top: 5px;
			a {
				color: #494949;
			}
		}
		input[type="password"],
		input[type="text"] {
			border-radius: 3px;
			border: 1px solid #d6d6d6;
			margin: 0;
		}
		.content-btns {
			clear: both;
			font-size: 0.875rem;
			margin-top: 80px;
			.back,
			.accept {
				border-radius: 3px;
				border: 1px solid;
				box-sizing: border-box;
				font-weight: bold;
				height: 32px;
				padding: 5px 10px;
				text-align: center;
			}
			.back {
				background: #f5f5f5;
				border-color: #e3e3e3;
				float: left;
				width: 70%;
				a {
					color: #303030;
					text-decoration: none;
				}
			}
			.accept {
				background: #aab22a;
				border-color: #919b00;
				color: #fff;
				float: right;
				width: 25%;
			}
		}
	}
}
.users_register_view {
	form {
		.content-btns {
			.back {
				width: 55%;
			}
			.accept {
				width: 40%;
			}
		}
	}
}
.users_lostpassword_view {
	.hint {
		font-size: .75rem;
		margin-bottom: 10px;
	}

	form {
		.content-btns {
			margin-top: 20px;
			text-align: center;
			.accept {
				float: none;
				width: 40%;
			}
		}
	}
}

