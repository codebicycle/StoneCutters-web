@import '../helpers/variables.styl'
@import '../helpers/mixins.styl'

.title-bar {
	border-bottom: 1px solid #e4e4e4;

	h1 {
		display: inline-block;
		font-size: 1.538rem;
		font-weight: normal;
		padding: 0 20px 0 24px;
	}

	a {
		font-weight: bold;
		font-size: 1.077rem;
	}
}

.categories-list-view {
	width: 660px;
	box();

	ul {
		ul-reset();
	}
	.icons {
		padding-left: 24px;
		clear-fix();

		.category {
			width: 33%;
			float: left;
		}
	}
	a {
		margin-bottom: 10px;
		
		strong {
			font-size: 1.231rem;
			color: #333;
			display: block;
			margin-bottom: 20px;
		}

		.icon {
			background: #000;
			display: block;
			height: 52px;
			margin: 30px 0 15px;
			width: 52px;
		}
	}
}

