section#itemListing {
	margin: .625rem 0 0 0;

	nav.categories {
		width: 14.38rem;
		float: left;
		background: #f6f6f6;
		h2, h3 {
			display: block;
			padding: .625rem .9375rem;
			color: #000;
		}
		h2 {
			font-size: .875rem;
		}
		h3, a {
			font-size: .8125rem;
		}
		h3 span {
			font-size: .625rem;
			color: #888;
			font-weight: normal;
		}
		.subCat {
			background: #fff;
			border-left: 1px solid #f6f6f6;
			border-right: 1px solid #f6f6f6;
		}
		a {
			display: block;
			border-top: 1px solid #fff;
			padding: .625rem .9375rem;
			color: #38b;

			span.icons {
				float: left;

				&:before {
					width: 1.625rem;
					display: inline-block;
					color: #0076be;
				    font-size: 1.375rem;
				    line-height: .9375rem;
				    text-transform: none;
				    vertical-align: top;				    
				}
			}
			span.count {
				color: #888;
				font-size: .625rem;
			}
		}
		.filters {
			padding: 0 0 0.75rem 0;

			.price {
				padding: 0 0 0 .9375rem;

				input, button {
					border-radius: 3px;
					display: inline-block;
					height: 1.938rem;
					background: #fff;
					border: 1px solid #ccc;
					text-align: center;
				}
				input {
					width: 4.313rem;
					margin: 0 .625rem 0 0;
					font-size: .8125rem;
				}
				button {
					width: 2.5rem;
				    color: #666;

				    &:before {
				    	content: "";
					    display: inline-block;
					    font-size: 1.25rem;
				    }
				}
			}
		}
	}
	nav.location {
		width: 45.63rem;
		float: right;
		font-size: .875rem;

		ul {
		    height: 33px;
		    width: 730px;
		    list-style: none outside none;
		    margin: 0px 0px -1px;
		    padding: 0px;

		    &:after {
			    clear: both;
			    visibility: hidden;
			    width: 730px;
			    content: '.';
			    list-style: none outside none;
			    margin: 0px;
			    padding: 0px;
		    }

		    li:first-child {
			    float: left;
			    height: 33px;
			    position: relative;
			    width: 56px;
			    background: #fff;
			    border-top: 1px solid rgb(241, 238, 220);
			    border-bottom: 1px solid rgb(219, 212, 168);
			    border-left: 1px solid rgb(241, 238, 220);
			    list-style: none outside none;
			    padding: 6px 10px;

			    &:after {
					    display: block;
					    height: 31px;
					    position: absolute;
					    right: -11px;
					    top: 0px;
					    width: 11px;
					    z-index: 11;
					    content: '';
					    border-top: 16px solid rgba(0, 0, 0, 0);
					    border-right: 0px;
					    border-bottom: 15px solid rgba(0, 0, 0, 0);
					    border-left: 11px solid rgb(255, 255, 255);
					    list-style: none outside none;
			    }
			    &:before {
				    display: block;
				    height: 31px;
				    position: absolute;
				    right: -12px;
				    top: 0px;
				    width: 11px;
				    z-index: 9;
				    content: '';
				    border-top: 16px solid rgba(0, 0, 0, 0);
				    border-right: 0px;
				    border-bottom: 15px solid rgba(0, 0, 0, 0);
				    border-left: 11px solid rgb(241, 238, 220);
				    list-style: none outside none;
			    }

			    a {
				    color: rgb(51, 136, 187);
				    text-decoration: none solid rgb(51, 136, 187);
				    border: 0px none rgb(51, 136, 187);
				    line-height: 1.188rem;
				    list-style: none outside none;
				    outline: rgb(51, 136, 187) none 0px;
			    }
		    }
		    li:last-child {
			    float: left;
			    height: 33px;
			    position: relative;
			    width: 136px;
			    z-index: 10;
			    background: rgb(255, 238, 119);
			    border-top: 1px solid rgb(219, 212, 168);
			    border-right: 1px solid rgb(219, 212, 168);
			    border-bottom: 1px solid rgb(255, 238, 119);
			    border-left: 1px solid rgb(219, 212, 168);
			    border-radius: 3px 3px 0 0;
			    font: normal normal normal 14px/19.600000381469727px arial, helvetica, sans-serif;
			    list-style: none outside none;
			    padding: 6px 10px 6px 20px;

			    &:before {
				    display: block;
				    height: 31px;
				    left: 0px;
				    position: absolute;
				    right: -12px;
				    top: 0px;
				    width: 146px;
				    z-index: 10;
				    content: '';
				    border-top: 16px solid rgba(0, 0, 0, 0);
				    border-bottom: 15px solid rgba(0, 0, 0, 0);
				    border-left: 11px solid rgb(219, 212, 168);
				    list-style: none outside none;
			    }
			    a {
				    color: rgb(243, 243, 243);
				    display: inline-block;
				    height: 14px;
				    position: relative;
				    right: -4px;
				    top: 0px;
				    width: 18px;
				    z-index: 10;
				    list-style: none outside none;
				    outline: rgb(243, 243, 243) none 0px;

				    &:before {
					    color: rgb(204, 204, 51);
					    display: block;
					    height: 39px;
					    left: -5px;
					    position: absolute;
					    top: -10px;
					    width: 28px;
					    content: '';
					    line-height: 2.438rem;
					    font-family: olx-icon-font;
					    font-size: 28px;
					    list-style: none outside none;
					    outline: rgb(204, 204, 51) none 0px;
				    }
			    }
		    }
		}

		div {
			width: 730px;
		    height: 48px;
		    position: relative;
		    text-align: left;
		    z-index: 1;
		    background: #fe7;
		    border: 1px solid rgb(204, 204, 51);
		    border-radius: 0 3px 3px 3px;
		    margin: -1px 0px 0px;
		    padding: 10px;
		}
	}

	section.list {
		width: 732px;
		float: right;
	    position: relative;

	    nav {
	    	height: 2.125rem;
	    	margin: 1rem 0 .625rem 0;
		    border-bottom: 1px solid #ccc;
		    font-size: 14px;

		    .tabs {
		    	float: left;

		    	a {
		    		background: none repeat scroll 0 0 #f4f4f4;
				    border-color: #ccc #ccc -moz-use-text-color;
				    border-image: none;
				    border-radius: 4px 4px 0 0;
				    border-style: solid solid none;
				    border-width: 1px 1px 0;
				    color: #666;
				    display: block;
				    float: left;
				    height: 33px;
				    margin-right: 10px;
				    padding: 7px 10px 4px;
				    text-decoration: none;

				    &.active {
				    	background: none repeat scroll 0 0 #fff;
					    color: #000;
					    height: 35px;
					    margin-top: -1px;
					    padding: 8px 10px 5px;
				    }
				    &:before {
				    	display: inline-block;
				    	line-height: 10px;
				    }
				    &.galery:before {
				    	content: "!";
					    font-size: 16px;
					    height: 12px;
					    padding-right: 2px;
				    }
				    &.list:before {
				    	content: "L";
					    font-size: 26px;
					    height: 14px;
				    }
		    	}
		    }

		    .sort {
		    	height: 1.875rem;
		    	float: right;line-height: 1.875rem;
		    	position: relative;
		    }
		}
		ul.listing {
			width: 100%;
			 li {
			 	margin: 0 0 .625rem 0;
			 	border: 1px solid #ccc;

			 	a {
			 		display: block;
			 		color: #666;

			 		> div {
			 			height: 6.875rem;
			 			float: left;
			 		}
			 		.photo {
			 			width: 20%;
			 			padding: .125rem;
			 			border-right: 1px solid #ccc;

			 			div {
			 				width: 100%;
			 				height: 100%;
			 				display: block;
			 				background-size: contain;
			 				background-position: center;
			 				background-repeat: no-repeat;
			 			}
			 		}
			 		&:hover .title, &:hover .price, &:hover .date {
			 			background: #e0f4ff;
			 		}
			 		.title, .price, .date {
			 			padding: .625rem 0;
			 		}
			 		.title {
			 			width: 50%;
			 			padding-left: .5rem;

			 			h3, span {
			 				width: 100%;
			 				float: left;
			 				line-height: 1.5rem;
			 			}
			 			h3 {
			 				color: #38b;
			 				font-size: 1rem;
			 				font-weight: normal;
			 			}
			 			span {
			 				font-size: .75rem;
			 				color: #666;
			 			}
			 		}
			 		.price {
			 			width: 20%; 
			 			color: #333;
			 			font-size: .9375rem;
			 			font-weight: bold;
			 			padding-right: .625rem;
			 		}
			 		.date {
			 			width: 10%;
			 			font-size: .75rem;
			 			color: #666;
			 		}
			 	}
			 }
		}
		#itemPagination {
			width: 100%;
			margin: 2.5rem 0 0 0;
			text-align: center;

			> a, div.center {
				display: inline-block;
				height: 2rem;
			}
			div.center {
				height: 2rem;
				border-top:1px solid #ddd;
				border-bottom:1px solid #ddd;

				a, strong {
					position: relative;
					top: 5px;
					padding: 2px 7px;
					margin: 0 .5rem;
					font-size: .9375rem;
				}
				a {
					color: #38b;
					font-weight: bold;
					-webkit-transition:all 0.4s;
					-moz-transition:all 0.4s;
					transition:all 0.4s;
					&:hover {
						background: #38b;
				    	border-radius: 23px;
				    	color: #fff;
					}
				}
				strong {
					background: #665;
				    border-radius: 23px;
				    color: #fff;
				}
			}
			> a {
				padding: 0 .8rem;
				border:1px solid #ddd;
				color: #333;
				&:after {
					position: relative;
					top: .3125rem;	
				}
			}
			> a:first-child {
				border-radius: 3px 0 0 3px;
				&:after {
					content: "";
				}
			}
			> a:last-child {
				border-radius: 0 3px 3px 0;
				&:after {
					content: "";
				}
			}
		}
	}

	aside.postBanner {
		width: 100%;
		float: left;
		margin: 1.25rem 0;

		.btn {
			width: 13.13rem;
			display: block;
		    position: relative;
			clear: both;
		    padding: .6875rem 1.563rem;
		    font-size: 1.125rem;
		    margin: 1.25rem auto;
		    color: #fff;

		    &:before {
				width: 46px;
				height: 46px;
				display: block;
				position: absolute;
			    right: -4px;
			    top: -4px;
			    content: "";		    
			    background: url(imageUrl/images/desktop/gratis.png);	    
			    z-index: 10;
			}
		}
		h2 {
			margin-bottom: 1.875rem;
			font-size: 1.875rem;
		    font-weight: bold;
		    text-align: center;

		    &:before, &:after {
		    	width: 1.875rem;
		    	height: 1.875rem;
		    	position: absolute;
		    	content: "";
		    	background: url(imageUrl/images/desktop/doubleArrows.jpg);
		    }
		    &:after {
		    	background-position: -31px 0;
			    margin: 23px 0 0 22px;
		    }
		    &:before {
		    	margin: 23px 0 0 -50px;
		    }
		}
		ul {
			width: 100%;
			display: inline-block;

			li {
				a{
