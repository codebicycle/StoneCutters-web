.users_register_view {
    box($white, $greyBorders, 3px, 0 0 20px 0, solid, 1px);

    .title {
        border-bottom: 1px solid $greyBorders;
        font-size: $xl;
        font-weight: normal;
        margin: 0;
        padding-bottom: 5px;
        padding: 13px 20px;
    }

    form {
        margin-top: 20px;
        padding: 0 20px;

        .wrapper {
            border: 0;
            padding: 0;
            margin: 0 0 10px 0;

            &.error {
                .login-label, .advice {
                    color: $red;
                }
                .text-field {
                    border-color: $red;
                }
                .advice {
                    display: block;
                }
            }
        }

        .login-label, .wrapper-inputs {
            float: left;
        }

        .login-label {
            font-size: $m;
            margin: 10px 20px 0 0;
            text-align: right;
            text-transform: capitalize;
            width: 160px;
        }

        .terms {
            display: inline-block;
            font-size: $xs;
            margin-left: 180px;
            vertical-align: middle;
            .checkbox {
                margin-right: 5px;
            }
        }

        .text-field {
            box($white, $greyBorders, 3px, 0 10px, solid, 1px);
            width: 310px;
        }

        .advice {
            display: none;
            font-size: $xs;
            margin-top: 5px;
            width: 700px;
            &.terms {
                margin-left: 180px;
            }
        }
        .main {
            margin-left: 180px;
        }

        .info {
            display: block;
            font-size: $xs;
            margin-top: 5px;
            color: $greyStrong;
        }

        .send {
            display: inline-block;
            margin-left: 180px;
            padding: 10px 30px;
            font-size: $baseFont;
            margin-top: 10px;
        }

        .forgot {
            display: inline-block;
            margin-left: 10px;
        }

    }

    .login {
        display: inline-block;
        margin: 10px 0 20px 200px;
    }

}
