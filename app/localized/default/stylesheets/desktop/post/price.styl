.posting-price-view {
	
	.field-controls {

		.text-field {

			float: left;

		}

		.type-text {

			width: 60%;
			border-radius: 0;

		}
		
		#field-currency_type {

			width: 15%;
				border-right-width: 0;
				border-radius: 3px 0 0 3px;

		}
		
		#field-priceType {

			width: 25%;
				border-left-width: 0;
				border-radius: 0 3px 3px 0;

		}
		
		.message {

			float: left;
			width: 100%;

		}
	
	}
	
	.field-wrapper {

		&.success,
		&.error {

			.field-controls {

				.type-text {

					border-left-color: $greyBorders;
					border-right-color: $greyBorders;

				}

			}
		
		}

	}

}
