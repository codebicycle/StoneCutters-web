.page-standart {
	box(#fff, $greyBorders , 3px, 0, solid, 1px);
	font-size: $s;

	h1,
	h3,
	ol,
	p {
		margin: 0;
	}

	h1 {
		font-size: $l;
		border-bottom: 1px solid $greyBorders;
		padding: 13px 0 13px 20px;
	}

	ol {
		& > li {
			padding-bottom: 10px;
		}
		padding: 30px 60px;
		
		h3 {
			padding-bottom: 10px;
		}
		p {
			padding-bottom: 20px;
		}

		ul {
			padding-left: 30px;

			li {
				padding: 5px;
			}
		}
	}

	h3 {
		font-size: $s;
		font-weight: bold;
	}
}