.footer_languages_view {
	padding: .625rem 0 .938rem;
	overflow: hidden;
	font-size: .813rem;

	.select-language {
		float: left;
		width: 35%;
		padding-left: 2.500rem;
		text-align: left;
	}

	.footer-links {
		display: none;
	}

	ul li {
		padding: .313rem 0 0;
	}

	strong,
	.terms-link,
	ul li a {
		color: #494949;
	}

	strong {
		display: block;
		text-align: left;
		span.arrow-down {
			width: 0;
			height: 0;
			border-left: 8px solid transparent;
			border-right: 8px solid transparent;
			border-top: 8px solid #494949;
			position: relative;
			top: 11px;
			margin-left: 5px;
		}
		span.arrow-up {
			width: 0;
			height: 0;
			border-left: 8px solid transparent;
			border-right: 8px solid transparent;
			border-bottom: 8px solid #494949;
			position: relative;
			top: -12px;
			margin-left: 5px;
		}
	}

	.terms-link {
		float: right;
		width: 45%;
		padding-right: 1.250rem;
		text-decoration: underline;
		text-align: center;
	}

}