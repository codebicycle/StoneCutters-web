#featuread-modal {
    .modal-container {
        width: 550px;
        .modal-header {
            padding: 10px 20px;
            .modal-title {
                font-size: $xl;
            }
            .icon-close {
                margin: 5px 10px 0 0;
            }
        }
        .modal-content {
            min-height: 400px;
            padding: 10px 20px;
            .fad-edit {
                padding: 25px 0;
                a {
                    border-radius();
                    action-button($greyStrong, $white, 3px, 10px 20px);
                    font-size: $m;
                    font-weight: bold;
                    line-height: 1;
                }
            }
            .fad-submit {
                input {
                    border-radius();
                    action-button($orange, $white, 3px, 10px 20px);
                    font-size: $m;
                    font-weight: bold;
                    line-height: 1;
                }
            }
            .feature-ad-terms {
                font-size: $xs;
            }
        }
    }
}