section#header {
	width: 100%;
	height: 4.75rem;
	border: 1px solid #cdcdcd;
	border-radius: 0 0 3px 3px;
	border-top: none; 

	&:before {
		width: 982px;
		height: .3125rem;
		margin: -0.3125rem 0 0 -0.0625rem;
		content: '';
		display: block;
		background-image: -moz-linear-gradient(left, #628 14%, #ab0 14%, #ab0 28%, #f70 28%, #f70 42%, #628 42%, #628 56%, #ab0 56%, #ab0 70%, #f70 70%, #f70 84%, #628 84%, #628 100%);
		background-image: -o-linear-gradient(left, #628 14%, #ab0 14%, #ab0 28%, #f70 28%, #f70 42%, #628 42%, #628 56%, #ab0 56%, #ab0 70%, #f70 70%, #f70 84%, #628 84%, #628 100%); 
		background-image: -webkit-linear-gradient(left, #628 14%, #ab0 14%, #ab0 28%, #f70 28%, #f70 42%, #628 42%, #628 56%, #ab0 56%, #ab0 70%, #f70 70%, #f70 84%, #628 84%, #628 100%); 
		background-image: linear-gradient(left, #628 14%, #ab0 14%, #ab0 28%, #f70 28%, #f70 42%, #628 42%, #628 56%, #ab0 56%, #ab0 70%, #f70 70%, #f70 84%, #628 84%, #628 100%); 
	}
	.logo {
		width: 92px;
		height: 92px;
		float: left;
		margin: -0.9375rem 1.25rem 0;
		background: url(imageUrl/images/desktop/logo.png);
	}
	p {
		float: left;
		margin: .9375rem 0 0 0;
		font-size: .8125rem;
		color: #aaa; 
	}
	.post {
		float: right;
		margin: 0.625rem 1.25rem 0 0;
		padding: 0.6875rem 1.563rem;
		font-size: 1.25rem;
		color: #fff;
		position: relative;

		&:before {
			width: 46px;
			height: 46px;
			display: block;
			position: absolute;
		    right: -4px;
		    top: -4px;
		    content: "";		    
		    background: url(imageUrl/images/desktop/gratis.png);	    
		    z-index: 10;
		}
	}
}
section#headerSession {
	width: 100%;
	padding: 0.3125rem 0;
	text-align: right;
	font-size: .8125rem;

	ul{
		height: 1.4rem;

		li {
			display: inline-block;
			padding: 0 .4375rem;
			border-right: 1px solid #aaa;

			&:last-child {
				padding-right: 0;
				border-right: none;
			}

			a {
				color: #38b;
			}
		}
	}
}