.modal-hide {
    display: none;
}

#modal-overlay {
    background-color: #000;
    height:100%;
    left: 0;
    opacity: .5;
    overflow: hidden;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 999;
}

.modal {
    h3, h4 {
        margin: 0;
    }

    box($white, #ddd , 3px, 0px);
    left: 50%;
    margin: 0;
    position: fixed;
    width: 720px;
    z-index: 1000;

    &.video-modal {
        .modal-content {
            clear-fix();
            border-radius: 3px;
            margin: 0 auto;
            overflow: hidden;
            padding: 0px;
            width: 920px;
        }

        .modal-header {
            background: none;
            border-bottom: none;
        }

        .video-content {
            background: #666;
            float: left;
            padding: 10px;
            width: 636px;
        }

        .video-thumbnails {            
            background: #ab0;
            float: left;
            height: 393px;
            padding: 10px;
            width: 244px;

            .content {
                ul-reset();
            }

            li {
                height: 90px;
                margin-bottom: 1px;
            }

            a {
                clear-fix();
                background: #fff;
                position: relative;
            }

            .video-title {
                display: block;
                float: left;
                padding: 10px 0 0 10px;
                width: 114px;
            }

            img {
                float: right;
            }

            .social-share {
                p {
                    color: #fff;
                    font-weight: bold;
                    text-align: center;
                }

                ul {
                    ul-reset();
                }

                li {
                    display: inline-block;
                }

                a {
                    border-radius: 16px;
                    color: #ab0;
                    display: block;
                    font-size: 1.692rem;
                    height: 28px;
                    line-height: 28px;
                    text-align: center;
                    width: 28px;
                }
            }
        }
    }
}

.modal-header {
    background: #eee;
    border-bottom: 1px solid #ddd;
    padding: 15px 20px;
    position: relative;

    h3 {
        font-size: 1.923rem;

        .first-part {
            color: $violet;
            font-size: 2.692rem;
        }
        .second-part {
            color: $orange;
            font-size: 2.692rem;
        }
    }
}

.modal-close {
    color: #999;
    right: 1px;
    display: block;
    font-size: 2.615rem;
    line-height: 0;
    position: absolute;
    top: 2px;

    &:hover {
        color: #000;
    }

    &:before {
        content: "\b0";
    }
}

.modal-content {
    padding: 15px 20px 0;
    background: #fff;

    > a {
        font-size: 1.077rem;
        font-weight: bold;
        margin-bottom: 14px;

        &:hover {
            text-decoration: none;
        }
    }

     
    h4 {
        border-bottom: 1px solid #ddd;
        font-weight: bold;
        margin: 0 0 15px 0;
        padding-bottom: 15px;
    }

    .column {
        float: left;
        width: 48%;
    }

    .column-right {
        float: right;
    }

}

.modal-cities {
    ul-reset();
    font-weight: bold;

    li {
        padding-bottom: 6px;
    }
}

.container-columns {
    clear-fix();
}

.modal-footer {
    margin-top: 15px;
}
