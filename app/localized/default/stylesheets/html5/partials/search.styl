header#search .search-form{
	display: table-cell;
	width: 100%;
	padding: 0 0px 0 10px;
}
header#search .search-form.home{
	width:100%;
}
header#search {
	background: #dadada;
	display: table;
	overflow: hidden;
	padding: .5rem 0;
	width: 100%;
}
header#search input {
	height: 1.875rem;
	display: inline-block;
}
header#search input[name=search] {
	width: 81%;
	padding: 0 0 0 .3rem;
	font-size: 0.8125rem;
	border: none;
	border: 1px solid #3b67a2;
	border-radius: 0.3125rem 0 0 0.3125rem;
	float:left;
}
header#search input[type=submit] {
	width: 15%;
	float: right;
	height:32px;
	background: #3b67a2 url(imageUrl/images/html5/icon_lupa.png) center center no-repeat;
	border: 1px solid #3b67a2;
	border-radius: 0 0.3125rem 0.3125rem 0;
	text-indent: -100em;
	float:left;
}
header#search .home input[type=submit]{
	width: 15%;
}
header#search .home input[name=search]{
	width: 82%;
}
.btnfilter {
	border-radius:0.150rem;
	border:.1rem solid #e2e2e2;
	color: #178cc8;
	box-shadow: 0 1px 1px rgba(96, 96, 96, 0.5);        
    font-family: Arial;
    font-size: 0.9rem;
    font-weight: bold;
    padding: 7px 7px 7px 30px;
    display: table-cell;
    text-align: center;
    float: right;
}
.btnlocation{
	background:#fff url(imageUrl/images/html5/icon_location.png) 10px center no-repeat;
	color: #494949;
	display: table-cell;
	margin-right: 10px;
}


