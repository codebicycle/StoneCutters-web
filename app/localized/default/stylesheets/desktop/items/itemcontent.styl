#item-content {
    box($white, $greyBorders , 3px, 0);
    margin-bottom: 20px;
    position: relative;

    &:after {
        top: 265px;
    }
    &:before {
        top: 266px;
    }
    > div {
        &:first-child {
            padding: 0 20px;
        }
        .item-title {
            font-size: $xl;
            padding-right: 40px;
            margin: 20px 0;
        }
    }
}
