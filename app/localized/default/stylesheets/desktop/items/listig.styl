.items-list-ig {
    clear-fix()
    ul-reset();
    display: block;
    margin: 10px 0;

    li {
        border: 1px solid $greyPageBg;
        float: left;
        height: 260px;
        padding: 12px;
        position: relative;
        width: 214px;

        &:hover {
            background: $white;
            border: 1px solid $greyBorders;
            box-shadow(0 0 2px 2px rgba(0, 0, 0, .1));
            z-index: 100;
        }
        h3 {
            font-weight: normal;
            margin: 0;
        }
        a {
            display: block;

            &:hover {
                text-decoration: none;
            }
        }
        p,
        .items-image {
            display: block;
            margin: 0;
            vertical-align: top;
        }
        .items-image {
            border: 1px solid $greyBorders;
            height: 161px;
            position: relative;
            width: 214px;

            img {
                bottom: 0;
                left: 0;
                margin: auto;
                max-height: 100%;
                max-width: 100%;
                position: absolute;
                right: 0;
                top: 0;
            }
        }
        .items-info {
            font-size: $m;
            height: 40px;
            line-height: 1.25;
            margin: 10px 0 0;
            overflow: hidden;

            span {
                color: $greyStrong;
                font-size: $xs;
            }
        }
        .items-price {
            color: $black;
            font-size: $m;
            font-weight: bold;
            height: 20px;
            margin: 5px 0;

            span {
                font-size: $xs;
            }
        }
        .items-date {
            color: $greyStrong;
            font-size: $xs;
        }
        p.featuredad {
            position: absolute;
            left: 0;
            top: 13px;
            height: 20px;
            .icon-star-circle {
                color: $featureStarBg;
                font-size: 26px;
                position: absolute;
                z-index: 10;
                top: -7px;
                left: 0;
                &:before {
                    border:2px solid $white;
                    border-radius(50%);
                    background: $white;
                }
            }

            em {
                ribbon($green, $white);
                top: 0;
                left: 24px;
                padding-left: 22px;
                position: absolute;
                width: 115px;
                text-align: center;
            }
        }

    }
}
