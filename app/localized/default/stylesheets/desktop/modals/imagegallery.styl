#image-modal {
    .modal-container, .modal-header, .modal-content {
        background: $black;
        border: none;
    }
    .modal-container {
        border-radius: 0;
        width: 980px;
    }
    .modal-header {
        height: 40px;
    }
    .modal-content {
        padding: 0;
    }
    .icon-close {
        color: $black;
        &:hover {
            background: $white;
        }
    }
    .arrow-prev, .arrow-next {
        color: rgba(255, 255, 255, .4);
        cursor: pointer;
        position: absolute;
        top: 48%;
        font-size: 32px;
        text-shadow: 0px 0px 4px rgba(0, 0, 0, 1);

        &:hover {
            color: rgba(255, 255, 255, 1);
        }
    }
    .arrow-prev {
        left: 5px;
    }
    .arrow-next {
        right: 5px;
    }
    .image-viewer {
        margin: 0;

        img {
            display: table;
            margin: 0 auto;
        }
    }
    .modal-footer {
        background: rgba(0, 0, 0, .5);
        bottom: 0;
        left: 0;
        position: absolute;
        width: 100%;

        .item-title {
            color: $white;
            display: block;
            font-size: $s;
            padding: 10px 0;
            text-align: center;
        }
        .thumbnail-wrapper {
            display: block;
            text-align: center;

            .thumbnail {
                border: 3px transparent solid;
                cursor: pointer;
                display: inline-block;
                height: 39px;
                margin: 0;
                position: relative;
                width: 39px;

                &:hover, .active {
                    border: 3px $blue solid;
                }

                img {
                    bottom: 0;
                    left: 0;
                    margin: auto;
                    max-height: 100%;
                    max-width: 100%;
                    position: absolute;
                    right: 0;
                    top: 0;
                }
            }
        }
    }

}
