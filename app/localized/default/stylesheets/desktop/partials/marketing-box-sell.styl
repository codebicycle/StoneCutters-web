.marketing-box-sell {
    float: right;
    padding-top: 19px;
    width: 356px;
    height: 360px;
    position: relative;
    p {
        font-size: $xl;
        margin: 0;
        text-align: center;
    }
    .subtitle {
        font-size: $l;
        line-height: 1;
        padding: 6px 0 10px;
        strong {
            background: url(imageUrl/images/desktop/underline.gif) center bottom no-repeat;
            display: inline-block;
            margin-bottom: 20px;
            padding-bottom: 8px;
        }
    }
    .description {
        clear-fix();
        background: #f5f5f5;
        margin-top: 100px;
        padding: 65px 0 10px;
        position: absolute;
        bottom: 0;
        .stuff {
            background: url(imageUrl/images/desktop/stuff.png) no-repeat 0 0;
            display: block;
            height: 131px;
            left: 20px;
            position: absolute;
            top: -75px;
            width: 307px;
            z-index: 100;
        }
        .icons {
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            color: $greyStrong;
            float: left;
            padding: 0 16px;
            width: 33%;
            text-align: center;
            &::before {
                font-size: $xl;
            }
            span {
                display: block;
            }
            p {
                font-size: $xs;
                padding-top: 10px;
            }
        }
    }
}
