.users_conversations_view {
    .alert {
        p {
            font-size: 14px;
            text-align: center;
            margin: 0;
            padding: 15px 0;

            &.success {
                background: $greenLight;
                &::before{
                    color: $green;
                    font-size: 16px;
                    margin: -3px 8px 0 0;
                }
            }
            &.fail {
                background: $pink;
                color: $red;
            }
        }
    }
    .actions {
        border-bottom: 1px solid $greyBorders;
    }
    .actions,
    .backToOlx {
        background: $greyBoxBg;
        padding: 15px 20px;
    }
    .notification {
        padding: 10px 20px;
        border-bottom: 1px solid $greyBorders;
    }

    .conversations {
        clear-fix();
        .top-conversations{
            box($white, $greyBorders, 0, 0 10px, solid, 1px);
            border-color: $greyBorders $greyBorders $white;
        }
    }

    .conversations-thread {
        box(#fdfea1, $greyBorders, 0, 0, solid, 1px);

        &:hover {
            border: 1px solid $greyBorders;
            box-shadow(0 0 2px 2px rgba(0, 0, 0, .1));
            z-index: 100;
        }
        clear-fix();
        background-color: #fdfea1;
        border-bottom: 1px solid $greyBorders;
        box-sizing: padding-box;
        padding: 10px;
        clear:both;

        figure{
            border: 1px solid $greyBorders;
            box-sizing: padding-box;
            border: 1px solid $greyBorders;
            float: left;
            max-height: 75px;
            min-height: 75px;
            padding: 2px;
            position: relative;
            text-align: center;
            width: 100px;
            margin:0;
            background-color:$white;
            vertical-align: middle;
            padding:0;

        }
        figure:before{
             color:#ccc;
             font-size:50px;
             padding-top:10px;
        }

        img {
                bottom: 2px;
                left: 0;
                margin: auto;
                max-height: 144px;
                max-width: 100%;
                position: absolute;
                right: 0;
                top: 2px;        }
        h3, p {
            margin: 0;
            min-width: 300px;
            padding: 5px 10px;
            color:$black;
        }
        span {
            position: absolute;
            right: 0;
            top: 5px;
            color:$black;
        }
        a{
         clear-fix();
            color:$black;
            display:block;
        }
        &:hover {
            background-color:greyPageBg;
        }
        .conversations-data {
            float: left;
            position: relative;
            width: 845px;
        }
        border-color:#ccc #ccc #fdfea1;
        &:last-child {
        border-color:#ccc;
        }
    }

    .backToOlx {
        border-bottom: 0;
        padding: 20px 0;
        text-align: center;
    }

    .read{
        background-color: $white;
        border-color:#ccc #ccc $white;

    }

    .btn {
        action-button($white, $black, 3px, 5px 20px);
        box-shadow(0 1px 0 rgba(255,255,255,0.2) inset)
        display: inline-block;
        margin-left: 5px;
        padding: 7px 10px 5px 10px;
        text-align: center;

        &:before {
            margin: -3px 5px 0;
        }
    }

    .active {
        &::after {
            border-color: transparent red;
        }
    }

    .name, .title, .date {
        display: inline-block;
    }

    .name {
        width: 220px;
    }

    .title {
        margin-left: 20px;
        width: 450px;
    }

    .date {
        float: right;
        text-align: right;
        width: 200px;
    }

    .back {
        font-size: $xs;
    }


    form {

        label {
            display: inline-block;
            vertical-align: middle;
        }

        input[type="checkbox"] {
            display: inline-block;
            margin-right: 10px;
            vertical-align: middle;
        }
    }
}


