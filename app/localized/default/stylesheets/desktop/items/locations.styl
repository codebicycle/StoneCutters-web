.items-locations {
    display: block;
    margin-bottom: 15px;

    ul {
        ul-reset();
    }
    .locations-tabs {
        height: 32px;
        font-size: $s;
        li {
            display: inline-block;
            float: left;
            position: relative;
        }
        li:not(:last-child) {
            border-bottom: none;
            box($white, #ddd, 0, 5px 10px 5px 15px);
            tab-arrow(right, $white, #ddd, 1px, 13px, 10);
        }
        li:first-child {
            box($white, #ddd, 3px 0 0 0, 5px 10px);
            border-bottom: none;
        }
        li:last-child {
            box($yellow, $yellowBorders, 0 3px 0 0, 6px 20px 6px);
            border-bottom: none;
            a {
                color: #000;
            }
        }
        li:only-child {
            box($yellow, $yellowBorders, 3px 3px 0 0, 6px 10px);
            border-bottom: none;
            top: 1px;
            a {
                color: $black;
            }
        }

    }
    .locations-list {
        box($yellow, $yellowBorders, 0 3px 3px 3px, 10px);

        li {
            width: 24%;
            display: inline-block;
            margin: 1px 0;
            font-size: $xs;
            span {
                color: #666;
            }
        }
    }
}
