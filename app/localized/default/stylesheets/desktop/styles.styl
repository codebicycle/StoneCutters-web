@import 'helpers/normalize.css';
a {
	color: $blue;
	outline: none;
	text-decoration: none;

	&:hover {
		color: #369;
		text-decoration: underline;
	}
}

body {
	background: $greyPageBg;
	font-family: arial, helvetica, sans-serif;
}

html {
	font-size: $baseFont;
}

input::-webkit-input-placeholder {
   color: $greyStrong;
}

input::-moz-placeholder {
   color: $greyStrong;
}

input:-ms-input-placeholder {
   color: $greyStrong;
}

main {
    clear-fix();
}

#progressBar {
    background: $orange;
    border-radius: 10%;
    height: 2px;
    left: 0;
    position: fixed;
    top: 0;
    transition(width 500ms ease-out,opacity 400ms linear);
    width: 0%;
    z-index: 999999;
}

.category-list {
    clear-fix();
    padding-left: 20px;
    float: left;
    width: 224px;
    &:first-child {
        padding-left: 24px;
    }
    .category {
        float: left;
        li {
            line-height: 1.3rem;
            padding-bottom: 10px;
        }
    }
    a {
        &:hover {
            text-decoration: underline;
        }

        .icon {
            background: url(imageUrl/images/desktop/sprite-home-icons.png)  0 0 no-repeat;
            display: block;
            height: 54px;
            margin: 20px 0 9px;
            width: 54px;
        }
        .cat-186 {
            background-position: 0 -108px;
        }
        .cat-187 {
            background-position: 0 -432px;
        }
        .cat-16 {
            background-position: 0 -216px;
        }
        .cat-185 {
            background-position: 0 -378px;
        }
        .cat-190 {
            background-position: 0 -54px;
        }
        .cat-191 {
            background-position: 0 -162px;
        }
        .cat-362 {
            background-position: 0 -648px;
        }
    }
    .category-link {
        color: $black;
        display: inline-block;
        font-size: $l;
        margin-bottom: 13px;
    }
}

.env-label {
	background: $orange;
	color: $white;
	font-size: $xs;
	left: 0;
	padding: 5px 10px;
	position: fixed;
	text-align: center;
	top: 0;
	z-index: 99999;
}

.hide {
    display: none;
}

.noscroll {
    overflow: hidden;
}

.posting {
	border-radius();
	action-button($orange, #fff, 3px, 15px 30px);
	font-size: $l;
	font-weight: bold;
	line-height: 1;
}

.search-form {
	fieldset {
		border: none;
		margin: 0;
		padding: 0;
	}
	.button,
	.text-field {
		display: inline-block;
		vertical-align: middle;
	}
	.button {
		action-button($green, #fff, 0 3px 3px 0, 0);
		border: none;
		font-size: $l;
		height: 38px;
		line-height: 1;
		width: 40px;
	}
	.text-field {
		border-color: $green;
		border-radius(3px 0 0 3px);
        width: 255px;
		&:focus {
	    	border-color: $green;
	    	box-shadow(0 0 1px 1px rgba(0,0,0,.1));
	    	color: $black;
	    }
	}
}

.text-field {
	border-color: $greyBorders;
	border-radius();
	border-style: solid;
	border-width: 1px;
	color: $greyStrong;
	font-size: $s;
	line-height: 1;
	padding: 0 10px;
    height: 36px;
    &:focus {
    	border-color: #999;
    	box-shadow(0 0 1px 1px rgba(0,0,0,.1));
    	color: #000;
    }
}

.title-module {
	font-size: $m;
	font-weight: normal;
	line-height: 1;
	margin: 0;
}

.wrapper-main {
    clear-fix();
	margin: auto;
	width: 980px;
}
