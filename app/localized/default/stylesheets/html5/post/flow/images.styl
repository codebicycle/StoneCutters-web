	.images {

		padding: 0;

	}

	input[type="file"] {
		width: 0;
		height: 0;
		position: absolute;
		top: -100px;
		left: -100px;
		opacity: 0;
	}

	ul {

		overflow: hidden;
		margin: -2px 0 -1px -1px;
		border-right: solid -1px #FFF;

	}

	li {

		position: relative;
		overflow: hidden;
		float: left;
		width: 33.3333%;
		height: 0;
		padding-top: 33.3333%;
		border-top: solid 1px #FFF;
		border-left: solid 1px #FFF;
		-moz-box-sizing: border-box;
		-webkit-box-sizing: border-box;
		box-sizing: border-box;

	}

	.image {

		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		background-color: #DDD;
		background-position: center center;
		background-repeat: no-repeat;
		background-image: url(imageUrl/images/html5/cameraSmall.png);
		background-size: 50%;

		&:after {

			content: '';
			display: block;
			position: absolute;
			left: 0;
			bottom: 0;
			height: .5rem;
			width: 0;
			background-color: #9ACD32;
			-moz-transition: none;
			-webkit-transition: none;
			transition: none;

		}

		&.load {

			&:after {

				width: 66%;
				-moz-transition: width 5000ms ease-in-out;
				-webkit-transition: width 5000ms ease-in-out;
				transition: width 5000ms ease-in-out;

			}

		}

		&.fill {

			background-size: cover;

			span {

				display: block;
				position: absolute;
				top: 5%;
				right: 5%;
				width: 15%;
				height: 15%;
				min-width: 2rem;
				min-height: 2rem;
				max-width: 4rem;
				max-height: 4rem;
				border-radius: 100%;
				color: #FFF;
				background-color: rgba(0, 0, 0, .5);
				border: solid 2px #FFF;
				-moz-box-sizing: border-box;
				-webkit-box-sizing: border-box;
				box-sizing: border-box;
				animation: popCloseButton 250ms ease-in-out;
				-webkit-animation: popCloseButton 250ms ease-in-out;

				&:before {

					content: '';
					position: absolute;
					top: 50%;
					left: 15%;
					width: 70%;
					height: 0;
					margin: -1px 0 0 -1px;
					border: 1px solid #FFF;
					-moz-transform: rotate(45deg);
					-webkit-transform: rotate(45deg);
					transform: rotate(45deg);

				}

				&:after {

					content: '';
					position: absolute;
					top: 50%;
					left: 15%;
					width: 70%;
					height: 0;
					margin: -1px 0 0 -1px;
					border: 1px solid #FFF;
					-moz-transform: rotate(-45deg);
					-webkit-transform: rotate(-45deg);
					transform: rotate(-45deg);

				}

			}

			&:after {

				width: 100%;
				opacity: 0;
				-moz-transition: width 250ms ease-in-out, opacity 250ms linear 250ms;
				-webkit-transition: width 250ms ease-in-out, opacity 250ms linear 250ms;
				transition: width 250ms ease-in-out, opacity 250ms linear 250ms;

			}

		}

	}

	p {

		position: relative;
		overflow: hidden;
		padding: 0 1em;
		background-color: #5C2A81;
		color: #FFF;
		height: 1.5em;
		line-height: 1.5em;
		text-align: center;

		small {

			display: block;
			overflow: hidden;
			font-size: .75em;
			text-overflow: ellipsis;
			white-space: nowrap;

		}

	}

