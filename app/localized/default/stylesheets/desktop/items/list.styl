.items-list {
    ul-reset();
    border-bottom: 1px solid #ddd;
    display: block;
    margin: 10px 0;

    li {
        box(#fff, #ddd, 0, 5px);
        border-bottom-color: #fff;
        &:hover {
            border: 1px solid #ccc;
        }

        a {
            display: block;
        }
        p, .item-image {
            display: inline-block;
            margin: 0;
            vertical-align: top;
        }
        p {
            padding-top: 10px;
        }
        .item-image {
            border: 1px solid #ccc;
            display: inline-block;
            height: 110px;
            position: relative;
            width: 141px;

            &.lines {
                lines(#ccc, 1px, 96%, 2%, -3px, 92%, 4%, -5px, right);
            }

            img {
                bottom: 0;
                left: 0;
                margin: auto;
                max-height: 100%;
                max-width: 100%;
                position: absolute;
                right: 0;
                top: 0;
            }
        }
        .item-info {
            font-size: 1.231rem;
            padding-left: 15px;
            width: 340px;

            span {
                color: #666;
                font-size: .9231rem;
            }
        }
        .item-price {
            color: #000;
            font-size: 1.231rem;
            font-weight: bold;
            width: 145px;
        }
        .item-date {
            color: #666;
            font-size: .9231rem;
            width: 65px;
        }
    }
}
