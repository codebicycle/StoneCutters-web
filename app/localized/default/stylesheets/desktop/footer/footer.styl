#footer {
	width: 100%;
	position: relative;
	margin: 0 auto;
	clear: both;
	background: #fafafa;
	border-top: 1px solid #ebebeb;
	
	section#links {
		width: 61.25rem;
		margin: 0 auto;
		padding: 1.25rem .625rem;

		ul {
			width: 25%;
			float: left;

			li {
				width: 100%;
				float: left;
				position: relative;

				 h5 {
				 	margin: 0 0 .625rem 0;
				 	font-size: 1.125rem;
				 	color: #333;
				 	font-weight: normal;
				 }
				 a {
				 	display: inline-block;
				 	margin: .3rem 0;
				 	font-size: .8125rem;
				 	color: #0076be;
				 }

				 &.select {
					width: 11.56rem;
					margin: -.125rem 0 0 -.5rem;
					padding: 0 .5rem;
					background: #fff;
					border: 1px solid #ccc;
					border-radius: .125rem;
					cursor: pointer;

					a{
						margin: .4rem 0;
					}
					span {
						float: right;
						margin: .8125rem 0 .625rem;
						border-color: #777 transparent;
						border-style: solid;
						border-width: .25rem .25rem 0;
					}
				}
				span.icons {
					position: absolute;
					top: -.4375rem;
					left: -.375rem;
					color: #777777;
					font-size: 28px;
					vertical-align: middle;

					&.movil:before {
						content:"W";
					}
					&.facebook:before {
						content:"";
					}
					&.twitter:before {
						content:"";
					}
				}
			}
			&.social li a {
				padding: 0 0 0 1.5rem;
			}
		}

	}

	section#copy {
		width: 100%;
		padding: .625rem;
		background: #ebebeb;
		font-size: .6875rem;
		text-align: center;
		color: #333;
	}
	

}
