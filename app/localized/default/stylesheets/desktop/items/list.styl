.items-list {
    ul-reset();
    border-bottom: 1px solid $greyBorders;
    display: block;
    margin: 10px 0;

    li {
        box($white, $greyBorders, 0, 10px);
        border-bottom-color: $white;
        position: relative;
        &:hover {
            border: 1px solid $greyBorders;
            box-shadow(0 0 2px 2px rgba(0, 0, 0, .1));
            z-index: 100;
        }
        a {
            display: block;
            text-decoration: none;
        }
        p,
        .items-image {
            display: inline-block;
            vertical-align: top;
        }
        .items-image {
            border: 1px solid $greyBorders;
            height: 110px;
            line-height: 95px;
            margin: 0;
            padding: 0;
            position: relative;
            text-align: center;
            width: 141px;

            &.lines {
                lines($greyBorders, 1px, 96%, 2%, -3px, 92%, 4%, -5px, right);
            }

            &.icon-photo {
                color: $greyBorders;
                font-size: remify(64px);
            }

            img {
                bottom: 0;
                left: 0;
                margin: auto;
                max-height: 100%;
                max-width: 100%;
                position: absolute;
                right: 0;
                top: 0;
            }
        }
        .items-info {
            font-size: $m;
            padding: 0 10px 0 15px;
            width: 330px;

            span {
                color: $greyStrong;
                font-size: $xs;
            }
        }
        .items-price {
            color: $black;
            font-size: $m;
            font-weight: bold;
            width: 140px;
        }
        .items-date {
            color: $greyStrong;
            font-size: $xs;
            width: 60px;
        }
    }
}
