lines(bgColor, width, height1, pos1, sep1, height2, pos2, sep2, position)
    &:after, &:before
        background: bgColor;
        content: "";
        position: absolute;
        if position == top or position == bottom
            height: width;
            &:before
                width: height1;
            &:after
                width: height2;
        else
            width: width;
            &:before
                height: height1;
            &:after
                height: height2;
    if position == top or position == bottom
        &:before
            width: height1;
            left: pos1;
        &:after
            width: height2;
            left: pos2;
    else
        &:before
            height: height1;
            top: pos1;
        &:after
            height: height2;
            top: pos2
    if position == top
        &:before
            top: sep1;
            left: pos1;
        &:after
            top: sep2;
            left: pos2;
    else if position == bottom
        &:before
            bottom: sep1;
        &:after
            bottom: sep2;
    else if position == right
        &:before
            right: sep1;
        &:after
            right: sep2;
    else if position == left
        &:before
            left: sep1;
        &:after
            left: sep2;



tab-arrow(position, bgColor, borderColor, borderWidth, size, zIndex)
    &:after, &:before
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
        z-index: zIndex;
        if position == top
            bottom: 100%;
            left: 50%;
        else if position == right
            left: 100%;
            top: 50%;
        else if position == bottom
            top: 100%;
            left: 50%;
        else if position == left
            right: 100%;
            top: 50%;
    &:after
        border-color: alpha(bgColor, 0);
        border-width: size;
        if position == top
            margin-left: - size;
            border-bottom-color: bgColor;
        else if position == right
            margin-top: - size;
            border-left-color: bgColor;
        else if position == bottom
            margin-left: - size;
            border-top-color: bgColor;
        else if position == left
            margin-top: - size;
            border-right-color: bgColor;
    &:before
        border-color: alpha(borderColor, 0);
        border-width: borderWidth + size;
        if position == top
            margin-left: - (borderWidth + size);
            border-bottom-color: borderColor;
        else if position == right
            margin-top: - (borderWidth + size);
            border-left-color: borderColor;
        else if position == bottom
            margin-left: - (borderWidth + size);
            border-top-color: borderColor;
        else if position == left
            margin-top: - (borderWidth + size);
            border-right-color: borderColor;

