#item-content {
    box($white, $greyBorders , 3px, 0);
    float: left;
    position: relative;
    tab-arrow(right, $white, $greyBorders, 1px, 30px, 1);
    width: 664px;

    &:after {
        top: 265px;
    }
    &:before {
        top: 266px;
    }
    > div {
        &:first-child {
            padding: 0 20px;
        }
        > h1 {
            font-size: $xl;
            padding-right: 40px
        }
    }
    .item-info {
        color: grey(40%);
        font-size: $xs;
        margin: 0 0 10px 0;
        ul-reset();

        li {
            display: inline-block;
            vertical-align: middle;
        }

        .icons::before {
            font-size: remify(24px);
        }
    }
}
