.posting-categories-view {
	clear-fix()
	.posting-label {
		font-weight: normal;
		margin: 0;
	}
}

.posting-categories-list {
	background: $greyPageBg;
	border-radius();
	float: left;
	height: 100%
	position: relative;
	ul-reset();
	width: 220px;

	a {
		display: block;
		padding: 7px 10px;

		&:hover, &.active {
			background: $blue;
			color: $white;
			text-decoration: none;

			&::before {
				color: $white;
			}
		}
	}

	.child-categories-list {
		background: $white;
		border-left: 3px solid $blue;
		max-height: 100%;
		left: 100%;
		overflow-y: auto;
		position: absolute;
		top: 0;
		ul-reset();
		width: 217px;
		z-index: 9999;
		.subcategory {
			border-top: 1px solid $white;
			&:first-child {
				border-top: none;
			}
		}
	}

	.icons::before {
		font-size: $m;
		padding: 0 10px 0 0;
	}
}
