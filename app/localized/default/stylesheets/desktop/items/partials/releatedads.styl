#related-ads {
    .samurai-items {
        clear-fix()
        ul-reset();
        display: block;
        margin: 10px 0;

        .samurai-item {
            border: 1px solid $greyPageBg;
            float: left;
            height: 250px;
            padding: 10px;
            position: relative;
            width: 198px;

            &:hover {
                background: $white;
                border: 1px solid $greyBorders;
                box-shadow(0 0 2px 2px rgba(0, 0, 0, .1));
                z-index: 100;
            }
            h3 {
                font-weight: normal;
                margin: 0;
            }
            a {
                display: block;

                &:hover {
                    text-decoration: none;
                }
            }
            p,
            .samurai-image {
                display: block;
                margin: 0;
                vertical-align: top;
            }
            .samurai-image {
                border: 1px solid $greyBorders;
                height: 161px;
                position: relative;
                width: 198px;

                img {
                    bottom: 0;
                    left: 0;
                    margin: auto;
                    max-height: 100%;
                    max-width: 100%;
                    position: absolute;
                    right: 0;
                    top: 0;
                }
            }
            .title {
                display: inline-block;
                font-size: $m;
                height: 40px;
                line-height: 1.25;
                margin: 10px 0 0;
                overflow: hidden;

                span {
                    color: $greyStrong;
                    font-size: $xs;
                }
            }
            .price {
                color: $black;
                display: inline-block;
                font-size: $m;
                font-weight: bold;
                height: 20px;
                margin: 5px 0;

                span {
                    font-size: $xs;
                }
            }
        }
    }
}